.hotel-details {
  padding: 155px 0 0px

  &.hotel-details_display-order {
    padding: 110px 0 0px;
  }

  &__wrap {
    z-index 1
    padding-bottom 20px
  }

  &__section {
    margin 0 0 35px
    position : relative;

    &_layout_context {
      overflow hidden
    }

    &-box {
      background #fff
      padding 20px
      color #000

      .hotel-details__section-title {
        color #000
      }
    }

    &-title {
      width: 100%
      color #fff
      font-size 18px
      margin-bottom 18px

      &-section {
        display table-cell
        width 100%
        min-width 400px
        vertical-align bottom

        &:last-child {
          text-align right
        }
      }
    }
  }

  &__ta {
    float right
  }
}

.hotel-details__section {
  &-text {
    margin-bottom 0px
    font-size 14px

    p {
      margin 0 0 20px 0
    }

    &-viewport {
      height: 150px
      overflow hidden
      text-overflow ellipsis

      p {
        margin-bottom 15px
      }

      &_state_open {
        height auto
      }
    }

    &-more {
      color #1e88c1
      cursor pointer
      margin-top 6px
    }
  }
}

.hotel-details-ta-info {
  background #ded9d8
  padding 6px 20px 4px
  font-size 0

  &__comments {
    font-size 12px
    color #4d4d4d
    padding-left 10px
    position relative
    top -2px
  }

  .icon-tripadvisor {
    margin-right 10px
  }
}

.hotel-details-name {
  font-size 24px
  line-height 46px
  color #fff
  font-weight bold
  text-align left

  .hotel-details-stars {
    white-space nowrap
    position relative
    left 8px
    line-height : 1.7em;
  }
}

.gallery {
  &__viewport {
    box-shadow 1px 1px 2px rgba(50, 50, 50, .6)
    position relative
    width 100%
    background-repeat no-repeat
    background-position center center
    background-size cover
    margin-left auto
    margin-right auto

    &-wrap {
      height 500px
      width $site-width
      display table-cell
      text-align center
      vertical-align middle
    }

  }

  &__list {
    font-size 0
    text-align justify
    margin-left -4px

    &-item {
      width 70px
      height 70px
      background-size cover
      margin-left 4px
      margin-bottom 5px
      display inline-block
      cursor pointer

      &_state_current {
        outline: 2px solid #89c13a
      }
    }

  }

  &__active {
    position absolute
    top 0
    bottom 0
    cursor pointer
    width 50%

    &_type {
      &_prev {
        left 0
      }
      &_next {
        right 0
      }
    }

    .b-carousel__control {
      display none
    }

    &:hover {
      .b-carousel__control {
        display block
      }
    }

  }

  &__disclaimer {
    font-size $small
    color $gray-l
    margin 5px 0
  }
}
.hotel-details-extra {
  font-size 0
  margin-top 10px

  &__item {
    display inline-block
    margin-right 7px
    margin-bottom 4px
    background-color #e6e7e9
    color #4d4d4d
    font-size 12px
    border-radius 4px
    padding 8px 10px 7px 30px
    background-position 7px center
    background-repeat no-repeat

    &_type {
      &_internet {
        background-image url(/spa/img/hotels-extra/internet.png)
      }

      &_kitchen {
        background-image url(/spa/img/hotels-extra/kitchen.png)
      }

      &_parking {
        background-image url(/spa/img/hotels-extra/parking.png)
      }

      &_swimmingpool {
        background-image url(/spa/img/hotels-extra/pool.png)
      }

      &_barrestaurant {
        background-image url(/spa/img/hotels-extra/lobby.png)
      }

      &_breakfast,
      &_meal {
        background-image url(/spa/img/hotels-extra/food.png)
      }

      &_fitness {
        background-image url(/spa/img/hotels-extra/fitness.png)
      }

      &_forpeoplewithdisabilities {
        background-image url(/spa/img/hotels-extra/insured.png)
      }

      &_servicesforchildren {
        background-image url(/spa/img/hotels-extra/kids.png)
      }

      &_transfer {
        background-image url(/spa/img/hotels-extra/bus.png)
        padding-left 36px
      }

      &_other {
        display none
      }
    }
  }
}

.hotel-details-map {
  width 100%
  height 200px
  box-shadow 1px 1px 2px rgba(50, 50, 50, .6)

  #hotel-details-map {
    width 100%
    height 100%
  }

  &_display_fullscreen {
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    height auto
    z-index 100
  }
}

.hotel-details-rooms {
  box-shadow 1px 1px 2px rgba(50, 50, 50, .6)
  background #fff
  overflow hidden

  &__room {
    border-bottom 1px solid #dedede

    &-warning {
      color $red
      margin-top 4px
    }

    &-long {
      display none
    }

    &-short {
      padding 10px
    }
    &-title {
      color #1e88c1
      font-size 14px
      font-weight normal
      cursor pointer
      position relative

      span:hover {
        text-decoration underline
      }

      b {
        font-size .8em
        position relative
        top 1px
      }
    }

    &-info {
      display table
      width 100%
    }

    &-desc,
    &-cancel-rules,
    &-price,
    &-actions {
      display table-cell
      vertical-align middle
      font-size 14px
    }

    &-desc {
      width 100%
    }

    &-cancel-rules {
      min-width 140px
      padding-right 5px

      &-ok {
        color $green
      }
    }

    &-price {
      min-width 165px
      padding-right 10px
      text-align right
      white-space nowrap

      &-diff {
        font-size 18px
        font-weight bold
      }
    }

    &-actions {
      min-width 180
      text-align right
    }

    &-long {
      padding 10px
      background #eeeeee
      background linear-gradient(to bottom, #eeeeee 0%, #ffffff 3%, #ffffff 97%, #eeeeee 100%)
      border 1px solid #dedede
      border-width 1px 0 0
    }

    &-long-text {
      font-size 14px

      p {
        margin 10px 0
      }

      ul {
        margin-left 15px
        padding-left 10px

        li {
          list-style disc
        }
      }
    }

    &_state_open {

      .hotel-details-rooms__room-long {
        display block
      }
    }
  }
}

.button {
  &_size_l {
    font-size 18px
    font-weight normal
    height 30px
    width 170px
  }
  &_size_xl {
    font-size 18px
    font-weight normal
    height 40px
    width 170px
  }
}

.mini-gallery {
  font-size 0

  &__mini {
    display inline-block
    width 70px
    height 70px
    margin-right 5px
    background-size cover
    position relative
    z-index 1

    &:hover {
      .mini-gallery__big {
        display block
      }
    }
  }

  &__big {
    display none
    position absolute
    left 0
    top 73px
    border 2px solid #fff
    border-radius 2px
    box-shadow 1px 1px 2px rgba(50, 50, 50, .6)
    z-index 2

    &::after {
      content ''
      display block
      position absolute
      top -10px
      left 35px
      width: 0;
      height: 0;
      border-style solid
      border-width 0 8px 10px 8px
      border-color transparent transparent #fff transparent
    }
  }
}

.hotel-details-resume {
  font-size 14px
  color #fff

  &__section {
    padding 15px
    border-bottom 1px solid #878787
    overflow hidden

    &:last-child {
      border-bottom 0

      &-long {
        display none
      }

      &-title {
        font-size 16px
        font-weight bold
        float left
        width 200px
      }
    }
  }

  &__list {
    margin-left 240px
    padding-left 15px
    overflow hidden
  }

  &__item {
    list-style disc
    float left
    width 40%
    margin-right 9%
  }
}
        
        
        