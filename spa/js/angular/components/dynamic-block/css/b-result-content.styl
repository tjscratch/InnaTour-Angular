.b-result-content
  .warning
    color #dd3e14

  .icon-sprite-airplane, .icon-sprite-hotel
    position absolute
    top 7px
    right 5px


  .result-cell__airlines
    margin-right 20px

    .logo,
    .rl-airline-text
      vertical-align middle

    .logo
      width 25px
      height 25px
      margin-right 5px



  .corner-price, .price
    color #acafb1
    font-family ProximaNova
    font-size 18px

    .cross
      text-decoration line-through


  .corner-price
    margin -2px 0 0

  .result-hotel-gallery
    padding 0
    position relative
    width 200px


  .price-description
    //color #4d4d4d
    display block
    font-size 12px
    line-height 8px
    white-space nowrap

  .price
    position relative
    width 100%

  .result-buy, .result-choice
    //width 176px

  .result-buy
    .icon-crown
      position: absolute
      right 11px
      top 9px


    .price
      color #000
      font-size 24px
      font-weight bold
      margin 40px 0 0

    .corner-price
      .price-description
        color #acafb1

    .price-description
      color #4d4d4d

  .result-choice

    .price
      color #878787
      font-size 18px
      margin -2px 0 18px


    .price-description
      font-size 12px
      font-weight normal

    .corner-price
      font-size 24px
      font-weight bold
      color #000
      position relative

  .icon-price-info
    cursor pointer
    position: absolute
    right 0
    top 7px

  .price-avia
    right 12px !important
    top 85px

  .bottom-actions
    bottom 10px
    font-size 14px
    left 10px
    line-height 26px
    position absolute
    right 10px

    &_right
      text-align: right

    a
      color : #1e88c1

      &.active
        color: #c0c0c2

    &__button
        padding-top 20px
        padding-bottom 10px
        position absolute
        bottom -10px

        &_action
            &_replace
                padding-left 10px
                padding-right 5px
                left -10px

            &_details
                padding-left 5px
                padding-right 10px
                right 0






  &.b-result_oneway_avia
    .price-avia
      right 12px !important
      top 55px




.hotel-info
  margin 21px 0 35px

  &_with_crown
    margin-top 10px

  &__special-mark
    font-size 14px
    color $green
    margin 0 0 5px -4px

  &__wrapper
    position relative
    box-sizing border-box
    padding 0 0 10px 80px
    height 75px
    margin-bottom 10px

  &__tripadvisor {
    height 20px
  }

  img
    margin-right 10px
    position absolute
    left 0
    top 0


.hotel-info-content
  display inline-block
  vertical-align top

  .warning
    font-size 14px
    line-height 1.7em

  .star-container
    line-height 0
    margin 2px 0 4px

.hotel-info-name
  font-size 18px
  //margin 6px 0 0
  line-height 1em

.hotel-info-date
  color #575757
  font-size 14px
  line-height 16px

.hotel-info-place
  color #575757
  position relative
  text-decoration none
  font-size 14px
  padding-left 17px
  display inline-block
  padding-top : 2px

  &:hover
    text-decoration underline

  &:before
    content ''
    height 18px
    width 13px
    background url(/spa/img/hotel-pin-small.png)
    position absolute
    top 0px
    left 0px
