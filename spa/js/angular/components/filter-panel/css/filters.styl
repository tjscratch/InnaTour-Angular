// Filters

//b-filter-panel
.filters__body {
  min-height 41px
  position relative;

  &_position_fixed {
    //фикс бага с перерисовкой в хроме
    -webkit-transform: translate3d(0, 0, 0);
    position fixed
    top 148px
    bottom: auto;
    left 50%
    margin-left -480px
    z-index 102
  }

  &.filters__body_dp {
    position: absolute;
    left: 50%;
    margin-left: -($site-width / 2);
    bottom: -41px;
  }

  &.b-filter-panel {
    .filters__baloon {
      display: none;
    }
  }

  .filters__baloon {
    position absolute
    left 0
    background #fff
    z-index 100
    width 320px
    box-shadow 0 3px 5px rgba(0, 0, 0, .3)
    padding 3px 0

    &__item {
      padding-bottom: 10px;
      border-bottom: 1px solid #c0c0c2;

      &:last-child {
        border-bottom: 0 none;
      }
    }

    &.filters__baloon_show {
      display: block;
    }

    &_240 {
      width 240px
    }

    &-radio {
      margin 0 12px 5px
      clearfix()

      input {
        display none

        &:checked + .ra-radio {
          background #89c13a
          color #fff
        }
      }
    }

    &-days {
      margin 0 12px
      clearfix()

      .ra-fly-type-list {
        float left
        overflow hidden
        width 108px

        &_style_full-width {
          width auto

          .ra-fly-type-list__item {
            width 50%
            float left
          }
        }
      }
    }
  }

  .filters__container {
    clearfix()
    background: #fff;
    min-height: 41px;
    box-shadow: 0 3px 5px rgba(0, 0, 0, .3);

    > li
    li.filter {
      float left
      position relative
      margin 0 5px 0 0

      &_position_last {
        margin-right 0
      }
    }

    .filters__sort {
      float right
      margin 0
      position: relative;
      white-space nowrap

      a {
        color #666
      }

      .filters__baloon {
        left auto
        right 0;
      }
    }
  }

  .filters__link {
    transition all .3s
    display block
    padding 14px 35px 13px 10px
    color #666
    font-size 14px
    line-height 1
    position relative
    cursor: pointer;

    &_selected {
      color #89c13a
    }

    &:before {
      content ''
      display block
      position absolute
      right 17px
      top 19px
      width 12px
      height 12px
      background url("/spa/img/i.png") no-repeat right -195px
    }

    &:hover {
      background-color #e6e7e9
      text-decoration none
      color #1a1a1a
    }
  }



  &.filters__body_avia {
    .filters__baloon-radio {
      li {
        float left
        border-left 1px solid #fff

        &:first-child {
          border 0

          .ra-radio {
            border-radius 3px 0 0 3px
          }
        }

        &:last-child .ra-radio {
          border-radius 0 3px 3px 0
        }
      }
      label {
        display block
        width 107px
      }
    }
  }
}

.filter__range-container {
  clearfix()
  padding 14px 12px 21px

  .ra-header-link {
    margin-top 5px
  }
}

.filter__range {
  float left
  font-size 14px
  color #1a1a1a

  input {
    border 1px solid #c0c0c2
    border-radius 3px
    width 90px
    box-sizing border-box
    margin 0 5px
    padding 5px 7px

    &:focus {
      border-color #89c13a
    }

    &.b-filters__name {
      width: 140px;
    }
  }
}

.filter__range-trackbar {
  position relative
  margin 0 12px 30px
}

.ra-radio {
  text-align: center;
  font-size: 14px;
  background: #e6e7e9;
  padding: 6px 0;
  cursor: pointer;
  display: block;
}
