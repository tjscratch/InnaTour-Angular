.b-price {
    padding-right: 15px;
    text-align: center;
}
.b-price__container {
    display: inline-block;
    text-align: left;
}
.b-price-profit__price {
    font-size: 1.1rem;
    color: $gray-l;
    text-decoration: line-through;
    text-align: center;

    .fa-rub {
        font-size: 1rem;
    }
}
.b-price__desc {
    font-size: .8rem;
    text-align: center;
}
.b-price__desc--gray {
    color: $gray-l;
}
.b-price__desc--economy {
    font-weight: bold;
}
.b-price-block {
    margin-top: 15px;
}
.b-price-block__margin-top {
    margin-top: 47px;
}
.b-price__value {
    font-size: 1.5rem;
    font-weight: bold;
    text-align: center;

    .fa-rub {
        font-size: 1.4rem;
    }
}
.b-price__rub {
    margin-left: 4px;
    font-size: .9em;
}
