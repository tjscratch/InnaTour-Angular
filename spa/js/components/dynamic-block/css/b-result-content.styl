.b-cost {
    height 115px;
    margin-left: -5px;
    padding-top: 20px;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;

    .fa-rub {
        padding-left: 3px;
    }
}
.b-cost.b-cost_avia {
    height 80px;
    padding-top: 35px;
}
.b-cost__old {
    height: 110px;
    padding-top: 0;
}
.b-cost-corner {
    min-height: 22px;
    margin: 0 0 4px;
    text-decoration: line-through;
    color: #acafb1;
    font-size: 18px;
    text-align: center;
}
.b-cost__price {
    white-space: nowrap;
}
.b-cost__price-value {
    margin: 0 0 3px;
    line-height: 1;
    font-size: 24px;
    font-weight: bold;
    color: #000;
    position: relative;

    .fa-rub {
        font-size: 22px;
    }
}
.b-cost__price-desc {
    font-size: 12px;
    font-weight: normal;
    text-align center;
}
.b-cost__price-sum {
    font-weight bold;
    font-size: 15px;
}
//
//
//
.b-cost-expand {
    color #fff;
    text-align center;
}
.b-cost-expand__price {
    margin 0 0 4px;
    white-space nowrap;
}
.b-cost-expand__price-value {
    display inline-block;
    margin-right 2px;
    font-size 24px;
    font-weight bold;
}
.b-cost-expand__price-generic {
    display inline-block;
    margin-left 5px;
    vertical-align baseline;
    .b-tooltip-price {
        margin-left 0;
    }
}
.b-cost-expand__price-sum {
    color #fff;
    text-align center;

    .fa {
        margin-left 3px;
    }
}