.b-result-content {
    .warning {
        line-height 16px
        max-width 390px
        color #dd3e14
    }
    .icon-sprite-airplane, .icon-sprite-hotel {
        position absolute
        top 7px
        right 5px
    }
    .result-cell__airlines {
        margin-right 20px

        .logo,
        .rl-airline-text {
            vertical-align middle
        }
        .logo {
            width 25px
            height 25px
            margin-right 5px
        }
    }
    .corner-price, .price {
        color #acafb1
        font-family ProximaNova
        font-size 18px

        .cross {
            text-decoration line-through
        }
    }
    .corner-price {
        margin -2px 0 0
    }
    .result-hotel-gallery {
        padding 0
        position relative
        width 200px
    }
    .price-description {
        //color #4d4d4d
        display block
        font-size 12px
        line-height 8px
        white-space nowrap
    }
    .price {
        position relative
        width 100%
    }
    .result-buy, .result-choice {
        //width 176px
    }
    .result-buy {
        .icon-crown {
            position: absolute
            right 11px
            top 9px
        }
        .price {
            color #000
            font-size 24px
            font-weight bold
            margin 40px 0 0

            &.price-margin-top-55 {
                margin-top 55px
            }
        }
        .corner-price {
            .price-description {
                color #acafb1
            }
        }
        .price-description {
            color #4d4d4d
        }
    }
    .result-choice {

        .price {
            color #878787
            font-size 18px
            margin -2px 0 18px
        }
        .price-description {
            font-size 12px
            font-weight normal
        }
        .corner-price {
            font-size 24px
            font-weight bold
            color #000
            position relative
        }
    }
    .icon-price-info {
        cursor pointer
        position: absolute
        right 0
        top 1px
    }
    .price-avia {
        right 12px !important
        top 85px
    }
    .bottom-actions {
        bottom 10px
        font-size 15px
        line-height 22px
        position absolute
        left 10px
        right 10px

        .button-replace {
            left: 0;
            bottom: 0;
            right: auto;
            color: #000;
            font-size: 14px;
        }

        a {
            color: #1e88c1

            &.active {
                color: #c0c0c2
                cursor: default
            }
        }
    }
    .bottom-actions_right {
        text-align: right
    }
    .bottom-actions__button {
        padding-top 20px
        padding-bottom 10px
        position absolute
        bottom -6px
    }
    .bottom-actions__button_action_replace {
        padding-left 10px
        padding-right 5px
        left -10px
        font-weight bold
    }
    .bottom-actions__button_action_details {
        padding-left 5px
        padding-right 10px
        font-weight normal

        &:hover {
            text-decoration underline
        }
    }
    &.b-result_oneway_avia {
        .price-avia {
            right 12px !important
            top 55px
        }
    }
}
.hotel-details-link {
    position absolute
    left 0
    right 0
    top 0
    bottom 0
}
.recommendedPairTicketLogo {
    margin: -6px 0 0 0;
}
