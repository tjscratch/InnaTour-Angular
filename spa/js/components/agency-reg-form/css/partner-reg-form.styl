.agency-reg-form{
    box-sizing border-box
    width 800px
    margin 50px auto
    padding 50px 115px 35px
    background-color rgba(255, 255, 255, .7)
    border-radius 10px

    .b-field-group{
        .b-field-block{
            margin-left 10px

            &.no-float{
                float none
            }
        }

        &.action{
            margin 15px 0 0 0
            text-align right
        }
    }

    .b-field-label{
        margin-bottom 4px
        color #000
        font-size 15px
    }
    .b-field-text{
        padding 8px 10px
        font-size 15px
    }
    .b-field-error{
        position relative
        margin -5px 0 0 0
        padding 0 0 10px 10px
        color #c1272d
        font-size 15px

        .fa{
            margin-right 3px
            font-size 18px
        }
    }

}