$border-radius = 0;
$control-height = 40px;

$base-color = #212121;
$color-white = #fff;

$bg-black = #212121;
$bg-white = #fff;
$bg-green = #77b237;
$bg-green-2 = #89c13a;
$bg-green-3 = #95cd47;
$bg-gray = #e0e0e0;
$bg-red = rgba(223, 0, 0, 0.85);
$bg-transparent = transparent;
$base-shadow-color = rgba(0, 0, 0, 0.6);

$border-color-gray = #bdbdbd;

.b-search-form-hotels{
    display flex
    padding: 15px 0px 16px 0;
}
.b-search-form-hotels__field{
    position relative;
    margin-left 1px
    //margin 0 3px 0 0;
}
.b-hotels-typeahead{
    width 420px

    .b-search-form-hotels__input-typeahead {
        width 400px
        border-radius 3px 0px 0px 3px
    }
}
.b-hotels-daterange{
    width 150px
}
.dropdown-menu{
    position absolute
    left 0
    top $control-height
    z-index 1000
    //overflow-y auto
    //overflow-x hidden
    overflow hidden
    margin 0
    padding 0
    background #fff
    box-shadow 0 2px 5px $base-shadow-color
    list-style none;
    border-radius $border-radius
    font-size 15px
    line-height 1.3

    li{
        position relative
        left 0
        padding-right 13px

        &.active{
            background #e6e7e9
        }
        &:first-child{
            border-radius $border-radius $border-radius 0 0
        }
        &:last-child{
            border-radius 0 0 $border-radius $border-radius
        }
    }
}
.b-search-form-hotels__input{
    //width 100%
    height 48px
    padding 0 10px
    vertical-align top
    color $base-color
    //font-size 14px
    font-size 15px
    font-family 'Roboto'
    border-radius $border-radius
    background-color #fff
    border none

    &:invalid{
        box-shadow: none
    }
    &:focus{
        box-shadow inset 0 0 4px $bg-green-2
        border-color $bg-green-2
    }
    &:disabled{
        background-color #e0e0e0
    }
}
.b-hotels-daterange {
    .b-search-form-hotels__input-datapicker {
        width 130px
    }
}
.b-search-form-hotels-typeahead-list-item{
    padding 6px 10px
    cursor pointer
    white-space nowrap
}
.b-search-form-hotels-typeahead-list-item__country{
}
.b-search-form-hotels-typeahead-list-item__name{
}
.b-search-form-hotels__field-icon{
    position absolute
    right 10px
    top 50%
    margin-top -7.5px
    font-size 15px
}
.b-search-form-hotels__field-error{
    .b-search-form-hotels__input{
        border-color $red
        box-shadow inset 0 0 4px $red
    }

    .ui-tooltip{
        max-width 320px
        background-color: $red;
        text-align: center;

        &:before{
            border-color: transparent transparent $red transparent;
        }
    }
}
