.b-hotels-typeahead{
    width 400px
}
.b-search-form-hotels__field{
    position relative;
    background: red;

    //BEGIN typeahead
    .dropdown-menu{
        position absolute
        left 0
        top $control-height
        z-index 1000
        //max-height 250px
        overflow-y auto
        overflow-x hidden
        margin 0
        padding 0
        background #fff
        box-shadow 0 2px 5px $base-shadow-color
        list-style none;
        border-radius $border-radius
        font-size 15px
        line-height 1.3

        li{
            position relative
            left 0
            padding-right 13px

            &.active{
                background #e6e7e9
            }
            &:first-child{
                border-radius $border-radius $border-radius 0 0
            }
            &:last-child{
                border-radius 0 0 $border-radius $border-radius
            }
        }
    }
    //END typeahead
}
.b-search-form-hotels-typeahead__input{
    width 100%
    height $control-height
    padding 0 10px
    vertical-align top
    color $base-color
    font-size 14px
    border 1px solid $bg-transparent
    border-radius $border-radius
    background-color #fff
    box-sizing border-box

    &:invalid{
        box-shadow: none
    }
    &:focus{
        box-shadow inset 0 0 4px $bg-green-2
        border-color $bg-green-2
    }
    &:disabled{
        background-color #e0e0e0
    }
}
.b-search-form-hotels-typeahead-list-item{
    padding 6px 10px
    cursor pointer
    white-space nowrap
}
