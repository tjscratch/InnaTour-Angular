$border-radius = 0;
$control-height = 36px;

$base-color = #212121;
$color-white = #fff;

$bg-black = #212121;
$bg-white = #fff;
$bg-green = #77b237;
$bg-green-2 = #89c13a;
$bg-green-3 = #95cd47;
$bg-gray = #e0e0e0;
$bg-red = rgba(223, 0, 0, 0.85);
$bg-transparent = transparent;
$base-shadow-color = rgba(0, 0, 0, 0.6);

$border-color-gray = #bdbdbd;

.b-search-form-hotels{
    display flex
}
.b-search-form-hotels__field{
    position relative;
    margin 0 3px 0 0;
}
.b-hotels-typeahead{
    width 420px
}
.b-hotels-daterange{
    width 150px
}
.b-search-form-hotels__field{
    //BEGIN typeahead
    .dropdown-menu{
        position absolute
        left 0
        top $control-height
        z-index 1000
        overflow-y auto
        overflow-x hidden
        margin 0
        padding 0
        background #fff
        box-shadow 0 2px 5px $base-shadow-color
        list-style none;
        border-radius $border-radius
        font-size 15px
        line-height 1.3

        li{
            position relative
            left 0
            padding-right 13px

            &.active{
                background #e6e7e9
            }
            &:first-child{
                border-radius $border-radius $border-radius 0 0
            }
            &:last-child{
                border-radius 0 0 $border-radius $border-radius
            }
        }
    }
    //END typeahead
}
.b-search-form-hotels__input{
    width 100%
    height $control-height
    padding 0 10px
    vertical-align top
    color $base-color
    font-size 14px
    border 1px solid $bg-transparent
    border-radius $border-radius
    background-color #fff
    box-sizing border-box

    &:invalid{
        box-shadow: none
    }
    &:focus{
        box-shadow inset 0 0 4px $bg-green-2
        border-color $bg-green-2
    }
    &:disabled{
        background-color #e0e0e0
    }
}
.b-search-form-hotels-typeahead-list-item{
    padding 6px 10px
    cursor pointer
    white-space nowrap
}
.b-search-form-hotels-typeahead-list-item__country{
}
.b-search-form-hotels-typeahead-list-item__name{
}
.b-search-form-hotels__field-icon{
    position absolute
    right 10px
    top 50%
    margin-top -7.5px
    font-size 15px
}
.b-search-form-hotels__field-error{
    .b-search-form-hotels__input{
        border-color $red
        box-shadow inset 0 0 4px $red
    }

    .ui-tooltip{
        background-color: $red;
        text-align: center;

        &:before{
            border-color: transparent transparent $red transparent;
        }
    }
}
