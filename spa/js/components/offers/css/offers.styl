$b-offer-offset = 1.5px;
offerSize(width, height) {
    width: width;
    padding-top: height;
}

/////////
/////////
///////// offers container
/////////
/////////
.b-offers-container {
    max-width: $site-width;
    margin: 50px auto;
}

.b-offers {
    //font-size: 0;
}

/////////
/////////
///////// offer filters
/////////
/////////
.b-offers-filters {
    position: relative;
    z-index: 200;

    display: flex;
    justify-content: space-between;

    margin: 0 0 50px;
}
.b-offers-filter{
    z-index: 2000;
    width: 22.5%;
}
.b-offers-filter-sort{
    width: 31%;
}
/////////
/////////
///////// offer row
/////////
/////////
$b-offer-row-size = 44%;
$b-offer-row-size-2 = 33%;
.b-offers__row {
    position: relative;
    width: 100%;
    //height: 0;
    margin: 0 -$b-offer-offset;
    font-size: 0;
}

.b-offers__row-top {
    position: relative;
    z-index 20
    padding 10px
    background-color #00a000
    color #fff
    font-size 1rem
    text-align center
}

.b-offers__row {
    &:nth-child(1) {
        padding: 0 0 $b-offer-row-size;
        .b-offer {
            &:nth-child(1) {
                right: auto;
                left: 0;
                top: 0;
                bottom: auto;
                offerSize(66%, $b-offer-row-size);
            }
            &:nth-child(2) {
                right: 0;
                left: auto;
                top: 0;
                bottom: auto;
                offerSize(34%, ($b-offer-row-size / 2));
            }
            &:nth-child(3) {
                right: 0;
                left: auto;
                top: auto;
                bottom: 0;
                offerSize(34%, ($b-offer-row-size / 2));
            }
        }
    }
    &:nth-child(2n) {
        padding: 0 0 $b-offer-row-size;
        .b-offer {
            &:nth-child(1) {
                left: auto;
                right: 0;
                top: 0;
                offerSize(66%, $b-offer-row-size);
            }
            &:nth-child(2) {
                right: auto;
                left: 0;
                top: 0;
                offerSize(34%, ($b-offer-row-size / 2));
            }
            &:nth-child(3) {
                right: auto;
                left: 0;
                bottom: 0;
                offerSize(34%, ($b-offer-row-size / 2));
            }
        }
    }
    &:nth-child(3n) {
        padding: 0 0 ($b-offer-row-size + $b-offer-row-size-2);

        .b-offer {
            &:nth-child(1) {
                left: auto;
                right: 0;
                top: 0;
                offerSize(100%, $b-offer-row-size);
            }
            &:nth-child(2) {
                right: auto;
                left: 0;
                top: auto;
                bottom: 0;
                offerSize(50%, $b-offer-row-size-2);
            }
            &:nth-child(3) {
                right: 0;
                left: auto;
                top: auto;
                bottom: 0;
                offerSize(50%, $b-offer-row-size-2);
            }
        }
    }
    &:nth-child(4n + 1) {
        padding: 0 0 $b-offer-row-size;

        .b-offer {
            &:nth-child(1) {
                right: auto;
                left: 0;
                top: 0;
                bottom: auto;
                offerSize(66%, $b-offer-row-size);
            }
            &:nth-child(2) {
                right: 0;
                left: auto;
                top: 0;
                bottom: auto;
                offerSize(34%, ($b-offer-row-size / 2));
            }
            &:nth-child(3) {
                right: 0;
                left: auto;
                top: auto;
                bottom: 0;
                offerSize(34%, ($b-offer-row-size / 2));
            }
        }
    }
}

/////////
/////////
///////// offer
/////////
/////////
.b-offer {
    position: absolute;
    height: 0;
    box-sizing: border-box;
    vertical-align: top;

    font-size: 1rem;
    color: $white;
}

.b-offer__bg {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 1;
    background-position: center;
    background-size: cover;
    transition: all 1s;
}

.b-offer__container {
    position: absolute;
    left: $b-offer-offset;
    right: $b-offer-offset;
    top: $b-offer-offset;
    bottom: $b-offer-offset;
    overflow: hidden;

    &:hover {
        .b-offer__bg {
            transform: translateZ(0) scale(1.3);
        }
    }
}

.b-offer__container-txt {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 2;
    padding: 15px;
    background-color: rgba(0, 0, 0, .3);
}

.b-offer__container-link {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 3;
}

.b-offer__title {
    position: absolute;
    top: 15px;
    font-weight: normal;
}

.b-offer__title-sub {
    font-size: 15px;
    color: #d6d6d6;
    text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.30);
}

.b-offer__title-main {
    font-size: 29px;
    color: #fff;
    text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.30);
}

.b-offer__title-info {
    font-size: 14px;
    color: #fff;
    text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.30);
}

.b-offer__price {
    position: absolute;
    bottom: 15px;
}

.b-offer__price-txt {
    font-size: 14px;
    color: #fff;
    text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.30);
}

.b-offer__price-value {
    font-size: 29px;
    color: #fff;
    text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.30);
}

.b-offer__price-currency {
    font-size: 25px;
}
