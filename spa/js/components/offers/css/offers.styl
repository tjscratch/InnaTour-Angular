$b-offer-offset = 1.5px;
offerSize(width, height) {
    width: width;
    padding-top: height;
}
/////////
/////////
///////// offers container
/////////
/////////
.b-offers-container {
}
.b-offers {
    max-width: $site-width;
    margin: 0 auto 40px;
}
/////////
/////////
///////// offers categories
/////////
/////////
.b-offers-categories-container {
    background: #DFDFDF;
}
.b-offers-categories {
    max-width: $site-width;
    margin: 0 auto;
    padding: 12px 0;
}
.b-offers-category__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 0 -1.5px;
}
.b-offers-category {
    flex: 2;
    margin: 0 1.5px;
    padding: 15px 10px;
    border: 1px solid transparent;
    border-radius: 2px;
    background-color: rgba(255, 255, 255, 1);

    font-size: 15px;
    color: #757575;
    cursor: pointer;
    white-space: nowrap;
    text-align: center;

    &:hover,
    &.active {
        background-color: rgba(155, 255, 0, 0.20);
        border-color: #7CB621;
    }
}
/////////
/////////
///////// offer filters
/////////
/////////
.b-offers-filters-container {
    margin: 0;
    //background-image: linear-gradient(-180deg, #1b1b1b 0%, #2b2b2b 100%);
}
.b-offers-filters {
    max-width: $site-width;
    margin: 0 auto;
    padding: 12px 0;

    display: flex;
    justify-content: space-between;
}
.b-offers-filter {
    z-index: 2000;
    width: 22.65%;

    &.selectize-control {
        .selectize-input {
            padding: 15px 10px;
            border-radius: 0;
            background-color: $white;
            background-image: none;
            border: 1px solid #F0BD4E;
        }
        .selectize-input>* {
            vertical-align: middle;
        }
        .selectize-dropdown {
            margin-top: 2px;
            border-radius: 0;
            border: 1px solid #F0BD4E;

            .option {
                position: relative;
                padding: 7px 8px 7px 28px;
                color: #000;
            }
            .ui-select-choices-row.active {
                .option {
                    background-color: #e4e6e8;
                    color: #000;

                    &:before {
                        content: "\f00c";
                        position: absolute;
                        left: 10px;
                        top: 10px;
                        font: normal normal normal 10px / 1 FontAwesome;
                        text-rendering: auto;
                        font-smoothing: grayscale;
                        color: $green;
                    }
                }
            }
        }
    }
}
.b-offers-filter__sort {
    width: 31%;
}
