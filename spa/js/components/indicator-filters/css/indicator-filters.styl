    }
    &:hover{
        text-decoration none
    }
}
.ra-best-block{
    background #edc63f
    border-radius 4px
    overflow hidden
    position relative
    box-shadow 1px 1px 4px rgba(0, 0, 0, .1)
    padding 16px 10px 54px
    text-align center
    margin 0 0 10px
}
.ra-best-select{
    font-size 15px
    color #fff
    font-weight bold
    text-decoration none
    text-transform uppercase
    background #4d4d4d
    display block
    position absolute
    left 0
    right 0
    bottom 0
    padding 10px
}
.ra-best-descr{
    font-size 14px
    line-height 20px
    color #4d4d4d
}
.ra-best-descr-info{
    display block
    font-size 20px
    text-decoration line-through
}
.ra-best-price{
