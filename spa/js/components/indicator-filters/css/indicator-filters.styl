.ra-best-title{
    font-size 15px
    color #fff
    font-weight bold
    padding 0 0 7px
    text-shadow 0 3px 3px rgba(0, 0, 0, .25)
}
.ra-separator{
    height 1px
    background #c0c0c2
    margin 10px 0 0
}
