}
.b-switch-filters__list{
    list-style: none;
    margin: 0;
}
.b-switch-filters__item{
    background: #fff;
    padding: 10px 26px 10px 11px;
    position: relative;
    display: inline-block;
    font-size: 14px;
    line-height: 1em;
    box-shadow: 0 1px 4px rgba(0, 0, 0, .25);
    margin: 0 4px 5px 0;
}
.b-switch-filters__item_close{
    cursor: pointer;
    position: absolute;
    right: 8px;
    top: 50%;
    margin-top: -4px;
}
.b-switch-filters_mod-wrapper{
    width: auto;
    margin: 0;
    
    .b-switch-filters_buttons{
        box-shadow 0 3px 5px rgba(0, 0, 0, .3)
        background-color: #fff;
        padding: 6px 0 5px 3px;
        margin-bottom: 0;
        margin-left: 8px;
        width: 228px;
    }
    
    .b-switch-filters_buttons_right{
        padding-top: 8px;
    }
    .b-switch-filters__result{
