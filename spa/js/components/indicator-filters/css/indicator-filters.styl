.button-map-list{
    border-radius: 2px;
    background #fff
    
    border 0
    border-left 32px solid #89c13a
    border-right 32px solid #e6e7e9
    cursor pointer
    height 30px
    padding 0 1px 0 0
    margin 0
    position relative
    
    &:before, &:after{
        content ''
        display block
        position absolute
        top 50%
    }
    
    &:before{
        @extend .icon-sprite-switch-map-left
        height 13px
        width 16px
        left -24px
        margin-top -6px
    }
    &:after{
        @extend .icon-sprite-switch-map-right
        height 17px
        width 14px
        left 10px
        margin-top -8px
    }
    &.checked{
        border-left 32px solid #e6e7e9
        border-right 32px solid #89c13a
        padding 0 1px 0 0
        
        &:before{
            @extend .icon-sprite-switch-map-left-gray
        }
        &:after{
            @extend .icon-sprite-switch-map-right-white
        }
    }
}
.results-aside_mod{
    
    &.avia{
        margin-top: 0px;
    }
    &.results-aside_mod-fixed{
        position: fixed;
        top: 190px;
        z-index: 100;
        left: 50%;
        margin-left: 250px;
        -webkit-transform: translate3d(0, 0, 0);
        margin-top: 0;
        width: 230px;
    }
    .ra-tags-container{
        margin 0 0 10px
    }
}
.ra-tags-container_fixed{
    position fixed
    top 200px
    z-index 10
    width 230px
}
.ra-tags-title{
    font-size 14px
    color #333
    font-weight normal
    padding 12px 0 8px
}
.ra-tags-title_white{
    color #fff
}
.ra-tags-reset{
    display inline-block
    margin 0 0 21px
    padding 6px 0 0 0px
    font-size 12px
    color #1a1a1a
    text-decoration underline
    
    &.avia{
