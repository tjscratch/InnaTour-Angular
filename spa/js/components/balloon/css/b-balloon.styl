.overlay {
  transform: translateZ(0);
  position: fixed;
  overflow-y: auto;
  background: rgba(51, 51, 51, .8);
  z-index: 500;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  display: block;

  &.overlay_show {
    display block
  }
}

.balloon {
  box-shadow: 0 2px 10px rgba(0, 0, 0, .3)
  position absolute
  left 50%
  top $padding_over_search + 20
  width 400px
  transform translateX(-50%);
  /*height 142px*/
  background #fff
  margin 0 0 20px 0
  border-radius 7px
  padding 25px 0 15px
  text-align center

  font-size 15px
  letter-spacing -.025em
  z-index 501
}


.b-balloon {
  display : block;
  z-index: 2000;
  position : absolute;

  &__content {
    padding-top : 10px;
  }

  &-auth {
    width: 760px;
  }
}


.balloon-close {
  position absolute
  padding 10px
  line-height: 0;
  font-size: 0;
  top 5px
  right 5px
  cursor pointer
  border-radius 22px

  &:hover {
    background-color #ededed
  }

}
