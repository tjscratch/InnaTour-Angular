.tooltip-widget {
  position : relative;
  height 30px
  width 32px
}


.tooltip_right {
  &:before {
    top: -10px;
    right: auto;
    left: 12px;
  }

  &:after {
    top: -12px;
    left: 4px;
    right: auto;
  }

}

