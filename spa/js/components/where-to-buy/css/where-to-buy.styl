$gray = rgba(246, 246, 246, 0.91);
.l-where-to-buy{
    position: relative;
    z-index: 1;
    padding: $padding-layout-light 0 0;
    background-color: $white;

    .sub-menu-container{
        border-bottom: 3px solid $gray;
    }
}
.l-where-to-buy__container{
    margin: 0 auto;
    width: $site-width;
}
.l-where-to-buy__title{
    font-size: 24px;
    margin: 30px 0 20px;
    font-family: ProximaNova, Arial, sans-serif;
    font-weight: normal;
}
.l-where-to-buy__txt{
    margin: 20px 0 35px;
    font-size: 15px;
}
.b-where-to-buy__location{
    position: relative;
    z-index: 2;
    height: 54px;
    margin: 0 0 -54px;
    background-color: $gray;
    font-size: 18px;
    line-height: 24px;
}
.b-where-to-buy__location-current{

}
.b-where-to-buy__location-current-txt{
    display: inline-block;
    padding: 15px 0;
}
.b-where-to-buy__location-edit{
    margin: 0 0 0 5px;
    color: $blue;
    text-decoration: underline;
    cursor: pointer;

    &:hover{
        text-decoration: none;
    }
}
.b-where-to-buy-map__container{
    position: fixed;
    left: 0;
    right: 0;
    z-index: 1;
    background-color red
}
.b-where-to-buy-map{
    width: 100%;
    height: 100%;
}