$height_adv = 65px;

$full_padding = ($full_padding + $height_adv);
$short_padding = ($short_padding + $height_adv);
$padding_over_search = ($padding_over_search + $height_adv);
$padding_over_head = ($padding_over_head + $height_adv);
$padding-layout-light = ($padding-layout-light + $height_adv);

.adv-inject {

  .header {
    top: $height_adv;
  }

  .results-container {
    padding: $full_padding 0 0;
  }

  .recommend-bundle-container {
    top: $padding_over_search;

    &.recommend-bundle-container_short {
      top: $padding_over_head;
    }
  }
}

.b-adv {
  background-image: url("/spa/img/adv_bg.jpg");
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: $height_adv;
  font-family: ProximaNova, Arial, sans-serif;
  z-index 100;

  .row {
    padding-top: 15px;
  }

  &__coll {
    position: relative;
    text-align: center;
  }

  &_close {
    position: absolute;
    top: 18px;
    right: 10%;
    cursor: pointer;
  }

  &__title {
    font-size: 32px;
    color: #fff;
  }

  .button_adv {
    position: absolute;
    top: 2px;
    right: 20%;
  }
}
