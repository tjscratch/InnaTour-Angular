.gallery_wrapper {
    &_empty {
        min-height: 0px;
        height: 0px;
        padding: 0;
        margin: 0;
        line-height: 0;
        font-size: 0;
    }
}

.gallery {

    &_full {
        -moz-user-select: -moz-none;
        -o-user-select: none;
        -khtml-user-select: none;
        -webkit-user-select: none;
        user-select: none;

        .gallery__list__wrapper {
            padding: 30px 10px 10px;
            margin-bottom: 20px;
        }

        .gallery__list_center {
            left: 50%;
            transform: translate(-50%, 0);
        }

        .gallery__viewport {
            box-shadow: 0 5px 7px 3px rgba(0, 0, 0, 0.5);

            &-wrap {
                padding: 20px 100px 100px;
                margin: 0 auto;
                height: auto;
            }
        }

        .balloon-close {
            z-index: 1;
            padding : 40px;
            top: -30px;
            right : -20px;

            &:hover {
                background-color : transparent !important;
            }
        }

        .balloon-close__wrap {
            transform : scale(0.6);
            border-radius: 2px;
            padding : 10px;
            border: 1px solid #fff;

            &:hover {
                background-color : rgba(255,255,255, 0.4) !important;
            }
        }

        &__close {

        }
    }

    &__list__container,
    &__list__wrapper {
        width: 100%;
        overflow: hidden;
        box-sizing: border-box;
        position: relative;
        min-height: 70px;
    }
      
    &__list__scroll {
      height: 40px;
      margin-top: 20px;
      /*overflow : hidden;*/
    }

    .image-wait-load {
        &:after {
            content: '';
            display: block;
            position: absolute;
            width: 40px;
            height: 40px;
            background-image: url("spa/img/preloader/imageloader.gif");
            left: 50%;
            top: 50%;
            margin: -20px 0 0 -20px;
        }
    }

    &__viewport {
        box-shadow 1px 1px 2px rgba(50, 50, 50, .6)
        position relative
        width 100%
        background-repeat no-repeat
        background-position center center
        background-size cover
        margin-left auto
        margin-right auto

        &-wrap {
            height 500px
            width $site-width
            position: relative;
            text-align center
            vertical-align middle
        }

    }

    &__list {
        transform-style: preserve-3d;
        transition: left;
        position: absolute;
        top: 0;
        left: 0;
        overflow: hidden;
        white-space: nowrap;
        font-size 0

        &-item {
            min-width: 70px;
            min-height: 70px;
            margin-right: 5px;
            display: inline-block;
            background-size: cover;
            cursor: pointer;

            &:last-child {
                margin-right: 0px;
            }

            &_state_current_full {
                position: relative;
                &:after {
                    content: '';
                    position: absolute;
                    top:0;
                    bottom:0;
                    right:0;
                    left:0;
                    box-sizing: border-box;
                    border: 2px solid #fff;
                }

            }
        }

        &-item__preview {
            background-size: cover;
            position: relative;

            &_fade {
                position: absolute;
                background-color: rgba(255, 255, 255, 0.4);
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                z-index: 10;

                .search-button__icon {
                    transform: translate(-50%, -50%);
                    position: absolute;
                    left: 50%;
                    top: 50%;
                }
            }
        }

        &-item_hover {
            transform-style: preserve-3d;
            border-radius: 1px;
            position: absolute;
            box-sizing: border-box;
            border: 3px solid #373124;
            background-size: cover;
            z-index: 200;
        }
    }


    &__active {
        position absolute
        top 0
        bottom 0
        cursor pointer
        width 40px


        &_type_prev {
            left: 6px;
        }

        &_type_next {
            right: 6px;
        }

        .b-carousel__control {
            display: none;
        }
    }

    &__active_full {
        position absolute
        top 0
        bottom 0
        cursor pointer
        width 80px

        &_type_prev {
            left: -80px;
        }

        &_type_next {
            right: -80px;
        }

        .b-carousel__control {
            display: block;
        }
    }

    &__list__container:hover {
        .b-carousel__control {
            display: block;
        }
    }

    &__disclaimer {
        font-size $small
        color $gray-l
    }
}
