.b-recommended_big{
    transform-style: preserve-3d;
}
.recommend-bundle-container{
    position fixed
    //top $padding_over_search
    //top 50px
    width 100%
    z-index 5
    background-color #DDE3E9
    //background url(/spa/img/banners/banner-dp.jpg) no-repeat center;
    //background-size cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
    align-items: center;
    background: url(https://s.inna.ru/Files/Photos/160527135902/170419145418/p_O.jpg) center/cover no-repeat;

    &.recommend-bundle-container_short{
        top $padding_over_head
    }

    &__small{
        .result-small__cell{
            padding-top 10px !important

            &:first-child{
                padding-top 6px !important
            }
        }
    }

    .price-generic-container{
        position: absolute;
        top: 0;
        right: 0;
        z-index: 100;
    }
}
.recommend-bundle{
    //background #000
    position relative
    width 100%
}
.recommend-bundle-title{
    //color: #fff;
    color: #313C48;
    //font-size: 18px;
    font-size: 15px;
    font-weight: normal;
    //margin-top: -18px;
    display flex
    align-items center
    justify-content space-between
    margin: 5px 0px -10px 0px;

    .icon-crown{
        position: relative;
        top: 1px;
        left: 10px;
    }
}
.recommend-bundle-background{
    background: url(/spa/img/dp-background.jpg) no-repeat 0 0;
    background-size cover
    height: 100%
    position: absolute
    width 100%
    z-index: 1

    &:after{
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, .5);
    }
}
.recommend-bundle-wrap{
    //padding 30px 0 24px
    //padding 30px 0 0px
    position: relative;
    z-index: 2

    .w-expand-collapse-link{
        position: absolute
        right 0

        &.w-expand-collapse-link_up{
            top: 12px;
        }

        &.w-expand-collapse-link_down{
            position: relative;
            top: auto;
            bottom: 0;
            padding-right: 24px;
        }
    }

    .expand-collapse-link {
        font-size 14px
        color #fff

        a {
            color #fff
        }
    }
}
.recommend-bundle-wrap_small{
    padding 10px 0

    .expand-collapse-link{
        top 45px
        z-index 10
    }
}
.recommended-pair{
    //border 1px solid #C9D2DB
    //border-radius 3px
    //overflow: hidden

    .b-result {
        padding: 0px;
        border: 0;
    }

    .spinner{
        display none
        width auto
        padding 15px 0 0 0;
    }
        
        
    .price,  
    .button,
    .bottom-actions,
    .icon-sprite-hotel,
    .hotel-info,
    .recommendedPairTicket,
    .icon-sprite-airplane,
    .flight-info{
        //display block
        opacity 1
        -webkit-transition: opacity linear .2s;
        transition: opacity linear .2s;
    }
    
    &.hotel-loading{
        .price, 
        .b-cost,
        .b-price,
        .button,
        .b-result__cell_even .bottom-actions,
        .icon-sprite-hotel,
        .hotel-info{
            display none
            opacity 0
        }
        .spinner{
            display block
            
            &.spinner-ticket{
                display none
            }
        }
    }
    &.ticket-loading{
        .price, 
        .b-cost,
        .button,
        .b-result__cell_ticket .bottom-actions,
        .recommendedPairTicket,
        .icon-sprite-airplane,
        .flight-info{
            display none
            opacity 0
        }
       
        .spinner{
            display block
            
            &.spinner-hotel{
                display none
            }
        }
    }

    .bottom-actions{
        .room-title{
            color #778695
            font-size 12px
            text-overflow ellipsis
            overflow hidden
            white-space nowrap
        }
        .room_bed-type-list{
            color #778695
            font-size 12px
            text-overflow ellipsis
            overflow hidden
            white-space nowrap
        }
    }
}
