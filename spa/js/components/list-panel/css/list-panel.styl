}
.b-dp-services__list-item{
    position: relative;
    margin: 5px 0;
    padding: 0 0 0 24px;
    font-size: 14px;
    color #313C48
}
.b-dp-services__list-item-icon{
    position: absolute;
    left: 0;
    top: 0;
    color: #77b237;
    font-size: 16px;
    text-align: left;

    &.icon-fuel{
        &:before{
            margin-left: 0.11em
        }
    }

    &.fa-plane{
        left 2px
    }
    &.fa-medkit{
        left 1px
    }
    &.fa-bus{
