.svg-icon{
    display: inline-block;
    width: 60px;
    height: 60px;
    cursor: pointer;

    svg{
        width: 100%;
        height: 100%;

        path{
            cursor: pointer;
            fill: rgba(255, 255, 255, 1);
        }

        &:hover path{
            cursor: pointer;
            fill: #f00;
        }
    }
}
