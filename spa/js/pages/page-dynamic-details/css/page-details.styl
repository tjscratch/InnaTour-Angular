        }
        
        &-cancel-rules{
            //padding-right: 5px;
            font-size: 15px;
            position absolute
            bottom 12px
            color #DB4437
        }
        
        &-price{
            //min-width: 165px;
            /*padding-right :10px;*/
            //text-align: right;
            //white-space: nowrap;
            text-align center
            font-size 20px
            color #313C48
            font-weight bold
            
            &-diff{
                font-size 18px
                font-weight bold
            }
            
        }

        &-price-default {
            text-align center
            font-size 20px
            color #313C48
            font-weight bold
        }

        &-price-no-default {

        }

        &-price-full{
            text-align center
            color #778695
            font-size 12px
        }

        &-actions{
            //text-align: right;
            position: absolute;
            //right: 0;
            //top: 0px;
            width: 160px;
            height 32px
            bottom 16px
            left 50%
            margin-left -80px
            
            .btn-hotel-room-actions{
                //box-shadow: 0 2px 2px rgba(0, 0, 0, 0.5);
                //border: 0 none;
                /*border-bottom : 1px solid #316a18;*/
                width 100%
                height 100%
                font-size 16px
                border-radius 3px
                border none
            }
        }
        
        &__details{
            position: relative;
            padding 20px 40px 20px 20px;
            background #f5f5f5
            border 1px solid #dedede
            border-width 1px 0 0
            
            .balloon-close{
                border: 1px solid #0277bd;
                border-radius: 2px;
                padding: 5px;
                top: 9px;
                right: 11px;
                
                &:hover{
                    background: none;
                    border-radius: 2px;
                }
            }
        }
        
        &__details__text{
            font-size 14px
            
            p{
                margin 10px 0
            }
            
            ul{
                margin-left: 15px;
                padding-left: 10px;
                
                li{
                    list-style: disc;
                }
            }
        }
        
        &_state_open{
            
            .hotel-details-rooms__room__details{
                display: block;
            }
        }
    }
}
.hotel-details-resume{
    font-size 14px
    
    &__section{
        padding 15px
        position: relative;
        border-top 1px solid #c0c0c2
        
        &:last-child{
            &-long{
                display none
            }
        }
        
        &:after{
            content: '';
            display: block;
            clear: both;
        }
    }
    
    &__section-title{
        font-size 16px
        font-weight normal;
        position: absolute;
        top: 15px;
        left: 0;
        padding-left: 15px;
    }
    
    &__wrapper{
        margin-left: 240px;
    }
    
    &__list{
        float: left;
        padding-left: 15px;
        overflow: hidden;
        width: 45%;
        
        &:first-child{
            /*padding-left: 0px;*/
        }
    }
    
    &__item{
        list-style: disc;
        color: #757575;
        margin-right: 8%;
        padding-bottom: 3px;
    }
}
.mini-gallery{
    font-size 0
    
    &__mini{
        display inline-block
        width 70px
        height 70px
        margin-right 5px
        background-size cover
        position relative
        z-index 1
        
        &:hover{
            .mini-gallery__big{
                display block
            }
        }
    }
    
    &__big{
        display none
        position absolute
        left 0
        top 73px
        border 2px solid #fff
        border-radius 2px
        box-shadow 1px 1px 2px rgba(50, 50, 50, .6)
        z-index 2
        
        &::after{
            content ''
            display block
            position absolute
            top -10px
            left 35px
            width: 0;
            height: 0;
            border-style solid
            border-width 0 8px 10px 8px
            border-color transparent transparent #fff transparent
        }
    }
}
