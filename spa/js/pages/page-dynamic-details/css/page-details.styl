    }
    
    &_gallery{
        //position: static;
        margin-right 16px
        width 500px
        height 330px
        float left
        position: relative
    }
    
    &_map{
        //margin-bottom: 0px;
        width 412px
        height 330px
        float right
    }
    
    &_layout_context{
        overflow hidden
        //margin-bottom: 0;
    }

    &_services{
        table{
            width 100%
            border 1px solid #DDE3E9
            border-collapse collapse
            color #778695
        }
        td{
            border 1px solid #DDE3E9
        }
        .title{
            width 30%
            font-size 20px
            font-weight normal
            text-align center
        }
        .list{
            width 70%
            font-size 15px
            padding 20px
        }
    }
    
    &-title{
        width: 100%
        color: #313C48;
        font-size: 24px;
        line-height: 24px;
        margin-bottom: 20px;
        
        &-section{
            display table-cell
            width 100%
            min-width 400px
            vertical-align bottom
            
            &:last-child{
                text-align right
            }
        }
    }
    
    &__header{
        
    }
    
    &_menu{
        padding-bottom: 15px;
    }
    
    &_menu__item{
        font-size: 15px !important;
        position: relative;
        text-align: left;
        padding: 6px 6px 6px 33px;
        vertical-align: middle;
        
        &:hover{
            background-color: #e0e0e0;
            color: #59595c;
        }
    }
    
    &_menu__icon{
        position: absolute;
        top: 50%;
        left: 6px;
        transform: translateY(-50%);
    }
    
    &-text{
        margin-bottom: 0px;
        line-height: 1.3em;
        font-size: 15px;
        
        p{
            margin 0 0 20px 0
            
            b{
                display: inline-block;
                padding-bottom: 5px;
            }
        }
        
        &-viewport{
            p{
                margin: 15px 0;
            }
            
            &_state_open{
                height auto
            }
        }
        
        &-more{
            position: relative;
            //color #1e88c1
            color #778695
            cursor pointer
            margin-top 6px
        }
    }
}
