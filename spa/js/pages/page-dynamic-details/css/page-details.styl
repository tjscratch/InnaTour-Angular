.hotel-details {
  color: #000;
  padding: $short_padding 0 0px

  &.hotel-details_display-order {
    padding: 110px 0 0px;
  }

  &__price {
    float : right;
  }

  &__wrap {
    z-index 1
    padding-bottom 20px
  }

  &__section_map  {
    margin-bottom :0;
  }

  &__ta {
    float right
  }
}

.hotel-details__section {
  margin 0 0 38px
  position: relative;

  &_gallery {
    position: static;
  }

  &_layout_context {
    overflow hidden
    margin-bottom: 0;
  }

  &-title {
    width: 100%
    color: #000;
    font-size: 24px;
    line-height : 22px;
    margin-bottom: 20px;

    &-section {
      display table-cell
      width 100%
      min-width 400px
      vertical-align bottom

      &:last-child {
        text-align right
      }
    }
  }


  &__header {

  }

  &_menu {
    padding-bottom: 15px;
  }

  &_menu__item {
    font-size : 15px !important;
    position: relative;
    text-align : left;
    padding : 6px 6px 6px 33px;
    vertical-align : middle;

    &:hover {
      background-color:#e0e0e0;
      color:#59595c;
    }
  }

  &_menu__icon {
    position: absolute;
    top: 50%;
    left: 6px;
    transform : translateY(-50%);
  }

  &-text {
    margin-bottom 0px
    font-size 14px

    p {
      margin 0 0 20px 0
    }

    &-viewport {
      height: 140px;
      padding-bottom : 10px;
      overflow: hidden;
      text-overflow: ellipsis;

      p {
        margin-bottom 15px
      }

      &_state_open {
        height auto
      }
    }

    &-more {
      color #1e88c1
      cursor pointer
      margin-top 6px
    }
  }
}

.hotel-details-ta-info {
  padding-bottom: 10px;
