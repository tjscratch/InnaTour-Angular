        height 100%
    }
    
    &_display_fullscreen{
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        height auto
        z-index 100
    }
}
.hotel-details-rooms{
    //background #fff
    /*overflow hidden*/
    
    &__room{
        border-bottom: 1px solid #dedede;
        
        .b-agency{
            margin-top: 3px;
            position: relative;
            z-index: 2;
        }
        
        &__item{
            position: relative;
            min-height: 80px;
            padding: 10px 0;
            font-size: 15px;
        }
        
        &__item row{
            position: relative;
        }
        
        &__item-info_bottom{
            padding-top: 12px;
        }
        
        &-warning{
            color $red
            margin-top 4px
        }
        
        &__details{
            display none
        }
        
        &-rules-warning{
            position: relative;
            display: inline-block;
            background-color: $warning;
            vertical-align: middle;
            padding: 6px 6px 6px 28px;
            margin-top: 14px;
        }
        
        .css-sprite-b2b-error-hotel{
            position: absolute;
            top: 50%;
            left: 7px;
            transform: translateY(-52%);
        }
        
        &-title{
            font-size 15px
            font-weight normal
            margin-bottom: 2px;
            cursor: pointer;
            word-wrap: break-word;
            width: 290px;
            /*position relative*/
            
            .like-link{
                border-bottom: 1px solid;
                line-height: 0.9em;
            }
            
            b{
                font-size .8em
                position relative
                top 1px
            }
        }
        
        &_pic{
            min-width: 80px;
            min-height: 80px;
            position: absolute;
            left: 0;
            top: 0px;
            background-size: 80px 80px;
        }
        
        &-desc,
        &-cancel-rules,
        &-price,
        &-actions{
            position: relative;
            box-sizing: border-box;
            float: left;
            min-height: 80px;
        }
        
        &_bed-type-list{
            font-size: 12px;
            word-wrap: break-word;
            width: 290px;
        }
        
        &-desc{
            padding-left: 90px;
            position: relative;
        }
        
        &-desc_wrap{
            min-height: 53px;
        }
        
        &-desc_empty{
            padding-left: 0px;
        }
        
        &-cancel-rules{
            padding-right: 5px;
            font-size: 15px;
        }
        
        &-price{
            min-width: 165px;
            /*padding-right :10px;*/
            text-align: right;
            white-space: nowrap;
            
            &-diff{
                font-size 18px
                font-weight bold
            }
            
        }
        
        &-actions{
            text-align: right;
            position: absolute;
            right: 0;
            top: 0px;
            width: 145px;
            
            .btn-hotel-room-actions{
                box-shadow: 0 2px 2px rgba(0, 0, 0, 0.5);
                border: 0 none;
                /*border-bottom : 1px solid #316a18;*/
            }
        }
        
        &__details{
            position: relative;
            padding 20px 40px 20px 20px;
            background #f5f5f5
            border 1px solid #dedede
            border-width 1px 0 0
            
            .balloon-close{
                border: 1px solid #0277bd;
                border-radius: 2px;
                padding: 5px;
                top: 9px;
                right: 11px;
                
                &:hover{
                    background: none;
                    border-radius: 2px;
                }
            }
        }
        
        &__details__text{
            font-size 14px
            
            p{
                margin 10px 0
            }
            
            ul{
                margin-left: 15px;
                padding-left: 10px;
                
                li{
                    list-style: disc;
                }
            }
        }
        
        &_state_open{
            
            .hotel-details-rooms__room__details{
                display: block;
            }
        }
    }
}
.hotel-details-resume{
    font-size 14px
    
    &__section{
        padding 15px
        position: relative;
        border-top 1px solid #c0c0c2
        
        &:last-child{
            &-long{
                display none
            }
        }
        
        &:after{
            content: '';
            display: block;
            clear: both;
        }
    }
    
    &__section-title{
        font-size 16px
        font-weight normal;
        position: absolute;
        top: 15px;
        left: 0;
        padding-left: 15px;
    }
    
    &__wrapper{
        margin-left: 240px;
    }
    
    &__list{
        float: left;
        padding-left: 15px;
        overflow: hidden;
        width: 45%;
        
        &:first-child{
            /*padding-left: 0px;*/
        }
    }
    
    &__item{
        list-style: disc;
        color: #757575;
        margin-right: 8%;
        padding-bottom: 3px;
    }
}
.mini-gallery{
    font-size 0
    
    &__mini{
        display inline-block
        width 70px
        height 70px
        margin-right 5px
        background-size cover
        position relative
        z-index 1
        
        &:hover{
            .mini-gallery__big{
                display block
            }
        }
    }
    
    &__big{
        display none
        position absolute
        left 0
        top 73px
        border 2px solid #fff
        border-radius 2px
        box-shadow 1px 1px 2px rgba(50, 50, 50, .6)
        z-index 2
        
        &::after{
            content ''
            display block
            position absolute
            top -10px
            left 35px
            width: 0;
            height: 0;
            border-style solid
            border-width 0 8px 10px 8px
            border-color transparent transparent #fff transparent
        }
    }
}
.hotel-details__section-services{
    margin: 0 0 20px;
}