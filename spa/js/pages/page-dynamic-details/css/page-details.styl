.hotel-details{
    color: #000;
    padding: $short_padding 0 0px
    
    &.hotel-details_display-order{
        padding: 110px 0 0px;
    }
    
    &__price{
        float: right;
        
        b{
            font-size: 20px;
        }
    }
    
    &__wrap{
        z-index 1
        padding-bottom 20px
    }
    
    &__ta{
        float right
    }
}
.hotel-details__section{
    margin 0 0 38px
    position: relative;
    
    &__crumbs{
        margin 0 0 15px
        padding-top 8px
        
        .section__crumbs__list{
            
        }
        
        .section__crumbs__list__item{
            position: relative;
            display: inline-block;
            padding: 0px 10px 0 5px;
            font-size: 15px;
            color: #212121 !important;
            
            &__link{
                color: #0277bd !important;
            }
            
            &:after{
                content: '';
                position: absolute;
                right: 1px;
                top: 50%;
                margin-top: -2px;
                width: 4px;
                height: 4px;
                border-radius: 50%;
                background-color: #0277bd;
            }
            
            &:last-child{
                &:after{
                    display: none;
                }
            }
        }
    }
    
    &_gallery{
        position: static;
    }
    
    &_map{
        margin-bottom: 0px;
    }
    
    &_layout_context{
        overflow hidden
        margin-bottom: 0;
    }
    
    &-title{
        width: 100%
        color: #000;
        font-size: 21px;
        line-height: 21px;
        margin-bottom: 20px;
        
        &-section{
            display table-cell
            width 100%
            min-width 400px
            vertical-align bottom
            
            &:last-child{
                text-align right
            }
        }
    }
    
    &__header{
        
    }
    
    &_menu{
        padding-bottom: 15px;
    }
    
    &_menu__item{
        font-size: 15px !important;
        position: relative;
        text-align: left;
        padding: 6px 6px 6px 33px;
        vertical-align: middle;
        
        &:hover{
            background-color: #e0e0e0;
            color: #59595c;
        }
    }
    
    &_menu__icon{
        position: absolute;
        top: 50%;
        left: 6px;
        transform: translateY(-50%);
    }
    
    &-text{
        margin-bottom: 0px;
        line-height: 1.3em;
        font-size: 15px;
        
        p{
            margin 0 0 20px 0
            
            b{
                display: inline-block;
                padding-bottom: 5px;
            }
        }
        
        &-viewport{
            p{
                margin: 15px 0;
            }
            
            &_state_open{
                height auto
            }
        }
        
        &-more{
            color #1e88c1
            cursor pointer
            margin-top 6px
        }
    }
}
.hotel-details-ta-info{
    padding-bottom: 10px;
    cursor pointer
    
    &__comments{
        font-size 12px
        color #4d4d4d
        padding-left 10px
        position relative
        top -2px
    }
    
    .icon-tripadvisor{
        margin-right 10px
    }
}
.hotel-details-name{
    font-size 24px
    line-height 30px
    color #fff
    font-weight bold
    text-align left
    padding: 7px 0 10px 10px;
    
    &__title{
        color: #212121;
        display: inline-block;
    }
    
    .hotel-details-stars{
        transform: translate(0%, -10%) scale(1.2);
        white-space: nowrap;
        padding-right: 5px;
        position: relative;
        display: inline-block;
    }
}
