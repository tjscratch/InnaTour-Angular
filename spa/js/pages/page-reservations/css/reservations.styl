.ReservationForm{
    width $site-width
    margin 0 auto
    padding 130px 20px 30px
    background $white
}
.ReservationForm__title{
    font-size: 21px;
    line-height 1
    font-weight: bold;
    margin: 30px 0 10px;
}
.ReservationFormBlock{
    margin 10px 0
    padding 10px 20px
    background $ReservationFormBlock-bg
    border none
}
.FieldBlock__email{
    width 380px
}
.FieldBlock__phone{
    width 150px
    margin-left 20px
}
.FieldBlock__second-name{
    width 160px
    margin-right 20px
}
.FieldBlock__surname{
    position relative
    width 160px
}
.FieldBlock__sex{
    margin-right 20px
}
