.Payment {
    padding-top: $padding_over_search - 10px;
    padding-bottom: 50px;
    background: $white;
}
.Payment__iframe-container {
    height: 724px;
    width: 982px;
    margin: 0 auto;
}
.Payment__iframe {
    width: 100%;
    height: 100%;
    border: none;
}
.Payment__success {
    padding 20px
    background: $white;
}
.Payment__title {
    padding 0 0 20px
    border-bottom 3px solid $green
    font-size 20px
    font-weight bold
}
.Payment__body {
    line-height 35px
    font-size 22px
    text-align center
    padding 80px 0
}
.Payment__body-error {
    color $red
}
.Payment__OrderInfo {
    padding 20px 0
    border-top 1px solid $green-dark
    box-shadow 0 -4px 0 0 $green
}
.Payment__OrderInfoWrapper {
    width $site-width-new
    margin 0 auto
}
.Payment__OrderInfo-action {
    margin 25px 0
    text-align center
}