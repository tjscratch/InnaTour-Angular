@import "vars"
@import "grid"
@import "datepicker"
@import "dropdown"

//mixin
.cfx{
    &:after{
        content ''
        display table
        clear both
    }
}
.b-inna-search-widget{
    width 100%
    color $base-color
    font-family ProximaNova, Arial, sans-serif
    font-size 14px
    line-height 20px

    *{
        box-sizing: border-box;
    }
}
.b-inna-search-form{
    @extend .cfx;
    padding 7px
    background $bg-black
    border-radius 0 $border-radius $border-radius
}
.b-inna-btn{
    width 100%
    height $control-height
    line-height $control-height
    border none
    border-radius $border-radius
    background-color $bg-green-2
    transition: background-color 0.3s linear 0s;
    font-size 15px
    color #fff
    cursor pointer

    &:active,
    &:hover{
        text-decoration none
        background-color $bg-green-3
    }
}
.b-inna-search-form-field{

    //BEGIN typeahead
    .dropdown-menu{
        position absolute
        left 0
        top $control-height
        z-index 1000
        max-height 320px
        overflow-y auto
        overflow-x hidden
        margin 0
        padding 0
        background #fff
        box-shadow 0 2px 5px $base-shadow-color
        list-style none;
        border-radius $border-radius

        li{
            position relative
            left 0
            
            &.active{
                background #e6e7e9
            }
            &:first-child{
                border-radius $border-radius $border-radius 0 0
            }
            &:last-child{
                border-radius 0 0 $border-radius $border-radius
            }
        }
    }
    .b-location-item{
        position relative
        padding 6px 10px 6px 15px
        white-space nowrap
        cursor pointer

        .b-location-item-name{
            letter-spacing -0.025em
            padding-right 48px
            color $base-color

            .i-name{
                color $base-color
            }

            .i-name-airport{
                margin-left 30px
            }

            .i-country{
                margin 0 0 0 3px
                color #878787
            }
        }

        .b-location-item-iata{
            position absolute
            top 7px
            right 10px
            color: #878787;
            text-transform: uppercase;
            font-size 12px
        }

        &.newLine{
            border-bottom 1px solid #a1a1a1
        }
    }
    //END typeahead
}
.b-inna-search-form-field-input{
    width 100%
    height $control-height
    padding 0 10px
    vertical-align top
    color $base-color
    font-size 14px
    border 1px solid $bg-transparent
    border-radius $border-radius
    background-color #fff

    &:invalid{
        box-shadow: none
    }
    &:focus{
        box-shadow inset 0 0 4px $bg-green-2
        border-color $bg-green-2
    }
    &:disabled{
        background-color #e0e0e0
    }
}
.inna-tooltip{
    position absolute
    top 34px
    left: 50%
    min-width 200px
    padding 5px 10px
    background-color $bg-red
    text-align center
    border-radius $border-radius
    white-space nowrap
    color #fff

    &:before{
        position absolute
        z-index 1
        content ''
        left 50%
        top -12px
        width 0px
        height 0px
        margin-left -6px
        border-style solid
        border-width 6px
        border-color transparent transparent $bg-red transparent
    }
}
//BEGIN datepicker
.b-inna-datapicker{
    position relative

    background-image url("data:image/png;base64,")
    background-repeat no-repeat
    background-position 96% 50%
}
//END datepicker

.b-inna-search__nav{
    display: block
    margin 0
    padding 0
    list-style none
    font-size 0
    line-height 0

    li{
        position relative
        display inline-block
        height $control-height
        line-height $control-height
        margin-right 3px
        padding 0 15px
        color $color-white
        font-size 17px
        border-radius $border-radius $border-radius 0 0
        cursor pointer
        overflow hidden

        &:before{
            content ''
            position absolute
            left 0
            top 0
            right 0
            bottom 0
            background-color $bg-black
            opacity .6
        }

        &.active{
            &:before{
                opacity 1
            }
        }

        > span{
            position relative
            z-index 2
        }

    }
}
