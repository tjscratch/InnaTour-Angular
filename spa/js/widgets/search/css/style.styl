@import "grid"
@import "datepicker"

$control-height = 36px;

//mixin
.cfx{
	&:after{
		content ''
		display table
		clear both
	}
}

.b-inna-search-widget{
	width 100%
	color #333
	font-family 'ProximaNova,Arial,sans-serif'
	font-size 14px
	line-height 20px

	*{
		box-sizing: border-box;
	}
}

.b-inna-search-form{
	@extend .cfx;
	margin 30px 0
	padding 7px
	background #212121
	border-radius 2px
}

.b-inna-search-form-field-input{
	width 100%
	height $control-height
	line-height $control-height
	padding 0 10px
	vertical-align top
	color #000
	font-size 14px
	border none
	background #fff
}

.b-inna-btn{
	width 100%
	height $control-height
	line-height $control-height
	border none
	border-radius 2px
	background-color #89c13a
	transition: background-color 0.3s linear 0s;
	font-size 15px
	color #fff
	cursor pointer

	&:active,
	&:hover{
		background-color #95cd47
	}
}

	
.b-inna-search-form-field{

	//BEGIN typeahead
	.dropdown-menu{
		position absolute
		left 0
		top $control-height
		margin 5px 0 0 0
		padding 0
		background #fff
		box-shadow 0 0 3px #333
		list-style none;

		li{
			&.active{
				background #e6e7e9
			}
		}
	}
	.b-location-item{
		position relative
		padding 6px 10px 6px 15px
		white-space nowrap

		.b-location-item-name{
			letter-spacing -0.025em
			padding-right 40px

			.i-country{
				margin 0 0 0 3px
				color #878787
			}
		}

		.b-location-item-iata{
			position absolute
			top 7px
			right 10px
			color: #878787;
			text-transform: uppercase;
			font-size 12px
		}
	}
	//END typeahead
}

// icons
.i-inna-calendar{
	display block
	width 17px
	height 16px
	background url("../images/calendar-active.png") no-repeat 0 0
}