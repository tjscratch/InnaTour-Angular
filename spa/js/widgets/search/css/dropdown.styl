.inna-dropdown{
  position relative
  display block
  width 100%
  color $base-color
  font-size 14px
  border none
  background-color $bg-white
}

.inna-dropdown-action{
  position relative
  height $control-height
  line-height $control-height
  padding 0 10px
}

.inna-dropdown-dialog{
  position absolute
  left 0
  top $control-height + 1
  /*width 180px*/
  padding 10px
  background-color $bg-white
  box-shadow 0 5px 10px $base-shadow-color
  font-size 12px
  line-height 14px

  .inna-dropdown-dialog_title{
    margin 0 0 10px 0
    font-weight bold
  }

  .inna-dropdown-dialog_label{
    margin 0 0 2px 0
  }
}

.inna-dropdown-dialog-selects,
.inna-dropdown-dialog-btns{
  position relative
  display block
  margin 0 -5px 10px
  padding 0
  list-style none
  font-size 0
  white-space nowrap
}

.inna-dropdown-dialog-btns_btn{
  display inline-block
  width 30px
  height 30px
  line-height 29px
  background $bg-white
  border-style solid
  border-color $border-color-gray
  border-width 1px 0 1px 1px
  font-size 15px
  text-align center
  cursor pointer
  transition background .15s

  &:first-child{
    border-radius $border-radius 0 0 $border-radius
  }
  &:last-child{
    border-width 1px
    border-radius 0 $border-radius $border-radius 0
  }

  &.selected{
    background-color $bg-green
    color $color-white
    border-color $bg-green

    & + .inna-dropdown-dialog-btns_btn{
      border-left-color $bg-green
    }
  }
}

  
