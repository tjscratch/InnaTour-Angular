.inna-arrow-bottom{
  position absolute
  z-index 1
  top 50%
  right 10px
  width 0px
  height 0px
  margin-top -2px
  border-style solid
  border-width 6px
  border-color #d8d8d8 transparent transparent transparent

  &:after{
    position absolute
    content ''
    left -6px
    top -8px
    border-style solid
    border-width 6px
    border-color #fff transparent transparent transparent
  }
}
