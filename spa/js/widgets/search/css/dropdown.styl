$dropdown-width = 165px;

.inna-dropdown{
    position relative
    display block
    width 100%
    border none
    border-radius $border-radius
    background-color $bg-white
    color $base-color
    font-size 14px

    &.open{
        .inna-dropdown-action{
            box-shadow: inset 0 0 4px $bg-green-2;
            border-color: $bg-green-2;

                .inna-arrow-bottom{
                    top: 30%;
                    -moz-transform: rotate(180deg);
                    -ms-transform: rotate(180deg);
                    -webkit-transform: rotate(180deg);
                    -o-transform: rotate(180deg);
                    transform: rotate(180deg);
                }
        }
        .inna-dropdown-dialog{
            display block
        }
    }
}
.inna-dropdown-action{
    position relative
    height $control-height
    line-height $control-height - 1px
    padding 0 10px
    cursor pointer
    border-radius inherit
    border 1px solid transparent
    @extend .noselect
}
.inna-dropdown-dialog{
    display none
    position absolute
    left 0
    top $control-height + 1
    z-index 9000
    width $dropdown-width
    padding 10px 15px
    background-color $bg-white
    box-shadow 0 5px 10px $base-shadow-color
    font-size 12px
    line-height 14px

    .inna-dropdown-dialog_title{
        margin 0 0 10px 0
        font-weight bold
    }

    .inna-dropdown-dialog_label{
        margin 0 0 2px 0
    }
}
.inna-dropdown-dialog-selects,
.inna-dropdown-dialog-btns{
    position relative
    display block
    margin 0 -5px 10px
    padding 0
    list-style none
    font-size 0
    white-space nowrap
}
.inna-dropdown-dialog-btns_btn{
    display inline-block
    width 36px
    height 30px
    line-height 29px
    background $bg-white
    border-style solid
    border-color $border-color-gray
    border-width 1px 0 1px 1px
    font-size 15px
    text-align center
    cursor pointer
    transition background .15s

    &:first-child{
        border-radius $border-radius 0 0 $border-radius
    }
    &:last-child{
        border-width 1px
        border-radius 0 $border-radius $border-radius 0
    }

    &.selected{
        background-color $bg-green
        color $color-white
        border-color $bg-green

        & + .inna-dropdown-dialog-btns_btn{
            border-left-color $bg-green
        }
    }
}
.inna-dropdown-age-row{
    position: relative
    display block
    width 144px
    margin 0 -5px
    white-space nowrap
    text-align justify
}
.inna-dropdown-age{
    position relative
    display inline-block
    width 46px
    height $control-height
    line-height $control-height - 2
    margin-right 3px
    padding 0 4px
    border 1px solid $border-color-gray
    border-radius $border-radius
    font-size 15px

    &.inna-dropdown-age-col-1{
        width 100%
    }

    &.inna-dropdown-age-col-2{
        width 70px
        margin-right 4px
    }

    &:last-child{
        margin-right 0
    }

    .inna-dropdown-age-toggle{
        cursor pointer
        white-space nowrap

        .inna-arrow-bottom{
            right 3px
        }
    }

    .inna-dropdown-age-dialog{
        display none
        position absolute
        z-index 10
        left -1px
        top -1px
        width $dropdown-width - 10
        max-height 150px
        margin 0
        padding 0
        list-style none
        background-color $bg-white
        box-shadow 0 0 4px 1px $base-shadow-color
        overflow-y auto
        border-radius $border-radius

        li{
            height: 30px
            line-height 30px
            padding 0 5px
            cursor pointer

            &:hover{
                background-color $bg-gray
            }
        }
    }

    &.open{
        .inna-dropdown-age-dialog{
            display block
        }
    }
}
.inna-arrow-bottom{
    position absolute
    z-index 1
    top 50%
    right 10px
    width 0px
    height 0px
    margin-top -2px
    border-style solid
    border-width 5px
    border-color #5d5d5d transparent transparent transparent

    &:after{
        position absolute
        content ''
        left -5px
        top -7px
        border-style solid
        border-width 5px
        border-color #fff transparent transparent transparent
    }
}
.avia-tickets_class{
    margin 0 0 0 2px
    opacity .55
    font-size 13px
}
.inna-dropdown-dialog__checkboxes{
    position relative
    margin 6px -15px 0
    padding 10px 10px 0px
    border-top 1px solid lighten($border-color-gray, 70%)

    .widget-checkboxes-label{
        i{
            margin-top -3px
        }
    }
}
// avia
.b-inna-col__peoples-avia{
    .inna-dropdown-dialog{
        width 250px
        font-size 13px
    }
}
.inna-dropdown-counter{
    margin 0 0 15px

    &:after,
    &:before{
        content ''
        display table
        clear both
    }
}
.inna-dropdown-counter__label{
    float left
}
.inna-dropdown-counter__label-capt{
    opacity .55
}
.inna-dropdown-counter__action{
    float right
}
//b-inna-counter
.b-inna-counter{
    font-size 0
}
.b-inna-counter__input{
    width 28px
    height 28px
    border 1px solid
    margin 0 3px
    padding 0 5px
    vertical-align top
    color $base-color
    font-size 14px
    border 1px solid $border-color-gray
    border-radius $border-radius
    background-color #fff
    text-align center
}
.b-inna-counter__minus,
.b-inna-counter__plus{
    @extend .noselect
    display inline-block
    line-height 28px
    width 28px
    background-color lighten($bg-black, 93%)
    text-align center
    color lighten($bg-black, 40%)
    font-size 20px
    border-radius $border-radius
    cursor pointer

    &:hover{
        background-color lighten($bg-green, 25%)
        color #fff
    }
    &:active{
        background-color $bg-green
        color #fff
    }
}