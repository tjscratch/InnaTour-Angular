$border-radius = 2px;
//color
$color-base = #212121;
$color-green = #77b237;
$color-red = #d74116;
$color-white = #fff;
$color-gray = #757575;
//bgr
$base-bg = #fff;
$bg-green = #77b237;
$bg-green-light = #bbd89b;
$bg-transparent = transparent;
//border
$border-color-base = transparent;
$border-color-gray = #bdbdbd;
//shadow
$base-shadow-color = rgba(50, 50, 50, 0.25);

.datepicker{
  display none
  position absolute
  top 100%
  left 0
  z-index 1000
  padding 4px
  margin-top 20px
  list-style none
  background-color $base-bg
  border-radius 2px
  box-shadow 0 0 10px $base-shadow-color
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 15px
  line-height 1.428571429
  color $color-base
}

.datepicker table td{
  width 30px
  height 30px
  line-height 30px
  padding 0
  text-align center
  border-radius $border-radius

  &.day{
    cursor pointer
    border 1px solid $border-color-base
  }

  &:nth-of-type(6),
  &:nth-of-type(7){
    color $color-red
  }

  &.today{
    border 1px solid $border-color-gray
    color $color-green
    font-weight bold
  }

  &.range{
    background-color $bg-green-light
    color $color-white
  }

  &.active,
  &:hover{
    background-color $bg-green
    color $color-white
    border-color $border-color-base
  }

  &.selected{
    line-height 16px
    vertical-align top
    color $color-white
    border-color $border-color-base
    background-color $bg-green
    background-repeat no-repeat

    &.from_date{
      text-align left
      background-image url("../images/1.png")
      background-position 15px 15px
    }
    &.to_date{
      text-align right
      background-image url("../images/2.png")
      background-position 2px 15px
    }
  }

  &.disabled{
    opacity .5
    background-color $bg-transparent !important
    color $color-base
  }
}

$btn-hover = #e0e0e0;
$btn-active = #77b237;
$arrow-base = #212121;
$arrow-bg = #fff;
$arrow-top = 10px;
$arrow-left = 12px;
.datepicker table th{
  padding 0
  font-weight normal

  &.prev,
  &.next{
    position relative
    height 30px
    width 30px
    border 1px solid $border-color-gray
    border-radius $border-radius
    text-align center
    cursor pointer
    font-size 0
    color transparent

    &:before,
    &:after{
      position absolute
      z-index 1
      content ''
      width 0px
      height 0px
      border-style solid
      border-width 6px
    }
    &:before{
      z-index 2
      border-width 5px
    }
      
    &:hover{
      border 1px solid $btn-hover
      background $btn-hover
    }
    &:active{
      border 1px solid $btn-active
      background $btn-active
    }
  }

  &.prev{
    &:after{
      right  $arrow-left + 1
      top $arrow-top - 1
      border-color transparent $arrow-base transparent transparent
    }
    &:before{
      right  $arrow-left
      top $arrow-top
      border-color transparent $arrow-bg transparent transparent
    }
    &:hover{
      &:before{
        border-color transparent $btn-hover transparent transparent
      }
    }
    &:active{
      &:after{
        border-color transparent #fff transparent transparent
      }
      &:before{
        border-color transparent $btn-active transparent transparent
      }
    }
  }

  &.next{
    &:after{
      left $arrow-left + 1
      top $arrow-top - 1
      border-color transparent transparent transparent $arrow-base
    }
    &:before{
      left $arrow-left
      top $arrow-top
      border-color transparent transparent transparent $arrow-bg
    }
    &:hover{
      &:before{
        border-color transparent transparent transparent $btn-hover
      }
    }
    &:active{
      &:after{
        border-color transparent transparent transparent #fff
      }
      &:before{
        border-color transparent transparent transparent $btn-active
      }
    }
  }

  &.dow{
    padding 5px 0 2px
    font-size 12px
    color $color-gray
  }
}

.datepicker table tfoot{
  display none
}