orange-btn(){
    background: linear-gradient(top, #ffc71e, #ff8900);
    border 1px solid #feb128
    border-radius 17px
    
    &:before{
        content ''
        position absolute
        left -5%
        top 18px
        width 110%
        height 34px
        border-radius 40px
        background: linear-gradient(top, #ff8900, #ffa906);
    }
    
    &:hover{
        background: linear-gradient(top, #ffdc0e, #ff9d00);
    }
}
