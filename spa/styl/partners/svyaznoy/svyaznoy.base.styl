//VARS
$bg-color = #f5f8fa
$white = #fff
$light-blue = #eef1f3
$gray = #757575
$light-gray = #f7f7f7
$light-blue2 = #afc0cd
$light-blue3 = #c8dee8
$dark-blue = #777893
$orange = #ffb42f
$light-orange = #fff0d5

$border-radius ?= 10px

$dp-title-color = #65a7c0

@import "../svyaznoy/colors.styl"
@import "../svyaznoy/index.styl"
@import "../full_wl/controls.styl"
@import "../svyaznoy/buttons.styl"
@import "../svyaznoy/form.styl"
@import "../svyaznoy/horiz-form.styl"
