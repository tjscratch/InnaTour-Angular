.partner-svyaznoy{
    .pic-cont{
        height: 0px;
        width: 0px;
        background: transparent;
    }
    .search-autocomplete{
        width 300px
        margin-top 0
        padding 0
        border 1px solid $dark-blue

        .search-autocomplete-block{
            &:hover,
            &.selected{
                background-color: $light-orange;
            }
        }
    }
    .offers-container{
        padding-top 13px

        .landing-title{
            display none
        }
    }

    .datepicker-body{
        z-index 1001
        margin-top 5px
        border 2px solid $light-blue3
        border-radius 6px

        .dp-head-cont{
            border none
            box-shadow none
            border-radius 6px 6px 0 0

            .dtpk-head{
                /*border none*/
            }

            .dtpk-caption{
                font-size 14px
                text-transform none
            }
        }
        .datepickerContainer{
            box-shadow none
            border-radius 0 0 6px 6px
        }
        .datepickerMonth span{
            font-size 18px
            color $dp-title-color
            text-transform uppercase
            font-weight bold
        }
        .datepickerGoPrev a, .datepickerGoNext a{
            border-radius: 17px;
        }
    }
}