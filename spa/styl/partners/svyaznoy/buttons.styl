btn-orange(){
    font-size 18px
    font-weight bold
    color $white
    text-align center
    text-shadow 0 -1px 0 #ff8600
    font-family "Open Sans", Arial, sans-serif
}
.partner-wl{
    .balloon-button{
        btx-button-color1();
    }

    .result-buy .button{
        left 10px
        width 162px
        height 36px
        line-height 36px
        padding 0
        box-sizing border-box
        background url("/spa/img/partners/svyaznoy/btn-buy-1.png") no-repeat 0 0
        btn-orange()
    }

    .b-list-panel__hotels_list .button{
        width 162px
        height 36px
        line-height 36px
        padding 0
        box-sizing border-box
        background url("/spa/img/partners/svyaznoy/btn-buy-1.png") no-repeat 0 0
        btn-orange()
    }

    .rl-buy-button{
        btx-button2();
    }

    .hotel-details-rooms__room-actions .button{
        btx-button1();
    }

    .b-tooltip-share__button.active{
        color-bg-share-wl();
    }

    .b-sum-button{
        btx-button-color1();
    }

    .b-pay-button{
        btx-button-color1();
    }

    .wl-container{
        .button{
            padding: 4px 16px;
            width: 140px;
            text-align: center;
            btx-button-color1();

            &.wl-search{
                margin: 6px 10px 0px 0px;
                text-transform: uppercase;
                position: absolute;
                right: 0px;
                font-size: 14px;
            }
        }

        .wl-text{
            position: absolute;
            display: block;
            left: 15px;
            top: 9px;
        }
    }

    .pin .pin-balloon .button{
        padding: 0;
        btx-button-color2();
    }

}