.partner-wl{
    .b-switch-filters{
        top: 87px;
    }

    .wl-new-search-container{
        z-index: 100;
        display: block;
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 48px;
        background-color: rgba(0, 0, 0, 0.4);

        .wl-center-cont{
            margin: 0 auto;
            width: 960px;
            position: relative;
        }

        .wl-container{
            color: white;
        }

        .wl-text{
            position: absolute;
            display: block;
            left: 15px;
            top: 15px;
        }
    }

    .overlay{
        z-index 1000
        background: rgba(235, 238, 242, 0.8);
    }

    .recommend-bundle-container{
        position: absolute;
        top: 0px;
        left 50%
        width 960px
        margin-left -480px
    }

    .recommend-bundle-background{
        background: url("/spa/img/partners/svyaznoy/head.jpg") no-repeat 0 0;

        /*&:after {
            background: none;
        }*/
    }

    .recommend-bundle-container.recommend-bundle-container_short{
        top: 0px;
    }

    .results-container{
        padding: 362px 0 0;

        &.results-container__short{
            padding-top: 165px;
        }
    }

    .recommend-bundle{
        background-color transparent
    }
    .recommend-bundle-background{
        height 105px
    }

    .recommend-bundle-title{
        background-color: transparent;
        line-height 23px
        padding: 10px 25px;
        margin-bottom: 0px;
        font-weight: normal;
        font-size 23px
    }

    .recommend-bundle-wrap{
        padding: 80px 0 0 0;

        &.recommend-bundle-wrap_small{
            padding: 50px 0 10px;
        }
    }

    .recommend-bundle-wrap .w-expand-collapse-link.w-expand-collapse-link_up{
        right 20px
        top: 73px;
        background-color: #fff;
        padding: 5px 14px 7px;
        text-decoration: none;
        border-radius 10px 10px 0 0
    }

    .recommend-bundle-wrap .expand-collapse-link{
        color: #4d4d4d;
        a {
            color: #4d4d4d;
        }
    }

    .icon-expand /*, .icon-collapse*/
    {
        background-image: url("/spa/img/expand-collapse-gray.png");
    }

    .ra-fly-type-list input:checked + .ra-checkbox{
        background-color #777893
    }

    .ra-checkbox{
        border-color #777893
        border-radius 0
    }
    .b-tickets__footer > .b-tickets__icons{
        display: none;
    }

    .filter__range{
        input{
            &:focus{
                border-color #ffb42f
            }
        }
    }

    .filters__body .filters__link_selected{
        color: #61a8e1;
    }


    .filters__baloon-radio{
        .btn-group{
            .btn{
                width 50%
                height 25px
                background transparent
                border-color #777893
                
                &.btn-green{
                    background-color #FC6421
                    text-indent 0
                }
            }
        }
    }
        
    .search__list .current:before{
        arrow-color-wl();
    }

    .result-small{
        .corner-price{
            padding-right 20px
        }
    }

    .ui-slider{
        background-color #777893 !important
    }
        
    .ui-slider-range{
        background: #fc6421 !important;
    }

}