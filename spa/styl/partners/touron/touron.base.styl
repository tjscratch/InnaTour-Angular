    //margin-top: 45px;
    //margin-bottom: 20px;
    position: relative;
}
.footer_right > p {
    margin-top: 6px !important;
}
a {
    color: #00aaf0;
    font-weight: normal;
    text-decoration: none;
}
.promoclogan{
    display: block;
    text-align: center;
    top: 200px;
    position: relative;
    color: #fff;
    font-size: 18px;
}
