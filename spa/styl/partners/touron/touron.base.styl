.layout.partner{
    top: 0;
    margin-bottom: 0;
    padding: 0;
}
.pic-cont{
    position relative
}
.black-friday{
    position absolute
    width 100%
    bottom 0
    padding 16px 0
    background #000
}
.black-friday-date{
    margin 0 auto
    color #fff
    font-size 15px
}
.black-friday-title{
    margin 10px auto 14px
    color #7cb621
    text-transform uppercase
    font-size 20px
}
.black-friday-promo{
    display flex
    align-items center
    justify-content center
}
.black-friday-promo__label{
    margin-right 20px
    color #e1e1e1
    font-size 13px
}
.black-friday-promo__cod{
    padding 7px 40px
    color #fff
    font-size 16px
    border-radius 3px
    border 1px solid #fff
}
.footer_right {
    float: right;
    text-align: right;
    font-size: 13px;
    margin-bottom: 20px;
}
.container {
    width: 970px;
    margin: 0 auto;
}
.footer_block {
