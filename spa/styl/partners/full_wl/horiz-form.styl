}

.partner-form-wrap.horizontal-form {
  z-index: 1000;
  margin: 0 auto;
  max-width: 974px;
}

.horizontal-form
  .b-tour-form
    position absolute
    top 50px
    padding-left 0px/*������*/

    &-wrapper
      background transparent
      padding 0 0 21px!important
      width 960px

    .main-label
      color-bg-lbl-wl()
      font-size 27px
      font-weight bold
      color #fff
      display inline-block
      line-height 44px
      padding 0 20px

    .b-search-field
      border 1px solid #bfbfc1
      display inline-block
      height 49px
      margin 0px 0 4px
      vertical-align top

      .search-people{
        background-image: none;
      }

      .search__list{
        margin-top: 1px;
      }

      .search-form-dialog-row .button-group .button.active{
        color-bg-btn-wl();
      }

      &__from,
      &__to {
        border-right: 0px;
      }

      &__long
        width 198px

      &__half {
        width 120px

        &.b_people {
          border-right: 0px;
          background-color: #fff;
        }
      }

      &__class
        width 119px
        /*margin-left 20px
        margin-right 10px*/

      &__calendar {
        border-right: 0px;

        &.pull-right {
          float: none;
        }
      }

      &__calendar,
      &__list
        position relative

        &:after
          background url("/spa/img/i.png") no-repeat
          content ''
          display block
          position absolute
          top 50%;
          right 9px

      &__list
        &:after
          background-position -45px -194px
          width 11px
          height 6px
          margin-top -3px

      &__calendar
        width 129px
        &:after
          background-position -39px -1830px
          width 17px
          height 16px
          margin-top -8px

        background-position 0 -171px

      &-hor
        display: inline-block;
        text-align justify
        font-size 0

        &:after
          width 100%
          content: ''
          display inline-block
          height 0

      &-value,
      input
        box-sizing border-box
        border 0
        height 100%
        width 100%
        padding 0 10px
        font-size 16px

      &-value
        line-height 49px

        .description
          color #868685

        .iata
          position absolute
          color #868685
          right 30px

    .b-search-button
      position: relative;
      color-bg-btn-wl()
      display inline-block
      height 51px
      width 58px
      margin-top 0px
      cursor: pointer;

      &:after
        @extend .icon-sprite-search;
        content: '';
        display: block;
        position: absolute;
        right: 13px;
        margin-top: 11px;
        z-index: 1;
      

.dtpk-checkbox {
  border-color #3fa9f5
  border-radius 0
}

.dtpk-checkbox-label input:checked + .dtpk-checkbox {
  background-color #3fa9f5
}

.ui-datepicker td a.ui-state-active,
.ui-datepicker td a.ui-state-hover {
  background-color #3fa9f5
}

.search-form-human-dialog{
  width: 189px;
}

.search-date-block__date{
  font-size: 16px;
}

.search-date-block__date,
.search-people,
.search-form-item-current{
  height: 49px;
  line-height: 49px;
}

.datepickerSelected-start a
.datepickerSelected-end a {
  color-datepicker-background-wl()
}

.datepickerSelected a{
  color-datepicker-bg();
}

.datePicker-today a{
  color-border-wl()
}

.datepickerDays a {
  &:hover {
    color-datepicker-background-wl()
  }
}

.datepickerGoPrev a
.datepickerGoNext a {
  &:hover {
    color-datepicker-background-wl()
  }
}  

.search-autocomplete{
  width: 401px;
  padding: 0;
  margin-left: -1px;
}

.horizontal-form{
  .b-search-field__long{
    &.b-search-field__from{
      z-index: 31;
    }
    &.b-search-field__to{
      z-index: 30;
    }

    .ui-tooltip{
      position: absolute;
      left initial!important;
      top initial!important;
      bottom -45px

      &:before{
        display none
      }

      .ui-tooltip-content{
        white-space nowrap;
      }
    }
  }
}

.horizontal-form {
  .datepicker-field {
    position: relative;

    .ui-tooltip {
      position absolute;
      left 0px
      bottom -40px

      &:before {
        display none
      }

      .ui-tooltip-content {
        white-space nowrap;
      }
    }
  }
}