.partner-wl {
    .b-switch-filters {
        top: 87px;
    }

    .wl-new-search-container {
        z-index: 100;
        display: block;
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 40px;
        background-color:rgba(0,0,0,0.4);

        .wl-center-cont {
            margin: 0 auto;
            width: 960px;
            position: relative;
        }

        .wl-container {
            color: white;
        }
    }

    .overlay {
        background: rgba(235,238,242,0.8);
    }

    .recommend-bundle-container {
        position: absolute;
        top: 0px;
    }

    .recommend-bundle-background {
        /*background: url("/spa/html/BiletixSite/photo.jpg") no-repeat 0 0;*/
    
        /*&:after {
            background: none;
        }*/
    }

    .recommend-bundle-container.recommend-bundle-container_short {
        top: 0px;
    }

    .results-container {
        padding: 400px 0 0;

        &.results-container__short {
            padding-top: 165px;
        }
    }

    .recommend-bundle-title {
        background-color: #61a8e1;
        padding: 10px 15px;
        width: 300px;
        margin-bottom: 0px;
        font-weight: bolder;
    }

    .recommend-bundle-wrap {
        padding: 80px 0 24px;

        &.recommend-bundle-wrap_small {
            padding: 50px 0 10px;
        }
    }

    .recommend-bundle-wrap .w-expand-collapse-link.w-expand-collapse-link_up {
        top: 62px;
        background-color: #ffffff;
        padding: 4px 14px 6px 8px;
        text-decoration: none;
    }

    .recommend-bundle-wrap .w-expand-collapse-link.w-expand-collapse-link_down {
        padding-right 0;
    }

    .recommend-bundle-wrap .expand-collapse-link {
        color: #4d4d4d;

        a {
            color: #4d4d4d;
        }

        &.w-expand-collapse-link_down {
            color #fff;
            a {
                color #fff;
            }
        }
    }

    .icon-expand/*, .icon-collapse*/ {
        background-image: url("/spa/img/expand-collapse-gray.png");
    }

    .ra-fly-type-list input:checked + .ra-checkbox {
        btx-checkbox-bg()
    }

    .ra-checkbox {
        btx-checkbox-border()
    }

    .ui-slider-range {
        background: #61a8e1 !important;
    }

    .b-tickets__footer > .b-tickets__icons {
        display: none;
    }

    .filter__range {
        input {
            &:focus {
                border-color #61a8e1
            }
        }
    }

    .filters__body .filters__link_selected {
        color: #61a8e1;
    }

    .search__list .fa {
        arrow-color-wl();
    }

    .btn.btn-green {
        background: #3fa9f5;
        border-color: #61a8e1;
        
        &:hover {
            background-color: #3fa9f5;
            border-color: #61a8e1;
        }
    }
}