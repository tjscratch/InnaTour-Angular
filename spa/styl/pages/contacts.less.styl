.contacts {

  .map-container {
    border-bottom: 1px solid #cacaca;
    height: 433px;
    margin-top: 45px;
  }

  .section-header {
    font-size: 24px;
    margin-top: 35px;
  }

  .cities-list {
    border-bottom: 1px solid #ddd;
    color: #333;
    margin-top: 30px;
    padding-bottom: 30px;

    &-item {
      display: inline-block;
      margin-left: 15px;

      &:first-child {
        margin-left: 0;
      }
    }

    a {
      color: $blue;
      text-decoration: none;

      &:hover {
        text-decoration: underline;
      }

      &.active {
        color: #333;

        cursor: default;

        &:hover {
          text-decoration: none;
        }
      }
    }
  }

  .contacts-list {
    margin-top: 20px;
  }
  .contacts-list-item{
    display: none;
    padding-top: 10px;

    .address{
      font-size: 24px;
    }

    .phone{
      font-size: 16px;
      line-height: 25px;
    }

    a{
      color: $blue;
      text-decoration: underline;
    }
  }

}