.overlay
  position fixed
  width 100%
  height 100%
  background rgba(51, 51, 51, .8)
  z-index 500
  left 0
  top 0
  min-width 600px
  overflow auto
  display none

.balloon
  position relative
  left 50%
  width 400px
  background #fff
  margin 0 0 20px -200px
