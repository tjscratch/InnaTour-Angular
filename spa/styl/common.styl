@font-face
    font-family: ProximaNova
    font-weight normal
    font-style normal
    src: url('../fonts/proximanova-reg-webfont.eot?') format('eot'),
         url('../fonts/proximanova-reg-webfont.woff') format('woff'),
         url('../fonts/proximanova-reg-webfont.ttf')  format('truetype'),
         url('../fonts/proximanova-reg-webfont.svg#svgFontName') format('svg')

@font-face
    font-family: ProximaNova
    font-weight bold
    font-style normal
    src: url('../fonts/proximanova-bold-webfont.eot?') format('eot'),
         url('../fonts/proximanova-bold-webfont.woff') format('woff'),
         url('../fonts/proximanova-bold-webfont.ttf')  format('truetype'),
         url('../fonts/proximanova-bold-webfont.svg#svgFontName') format('svg')

body
    font-family ProximaNova, Arial, sans-serif

// Form
.button
    position relative
    border-radius 3px
    overflow hidden

    input
        position absolute
        display block
        left 0
        top 0
        width 300px
        height 300px
        cursor pointer
        border 0
        opacity 0

// Imports
@import "listing"