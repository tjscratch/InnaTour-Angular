body {
  -webkit-font-smoothing: subpixel-antialiased !important;
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  font-smoothing: subpixel-antialiased !important;
  background-size: 100%;

  font-family: ProximaNova, Arial, sans-serif;


  &.scrollVisible {
    overflow-y: visible;
  }

  &.overflow_hidden {
    overflow: hidden !important;
  }

  &.disable-hover,
  &.disable-hover * {
    pointer-events: none !important;
  }
}

.main {
  min-height: 100%;
  //padding 0 $site-padding

  .wrpr {
    padding-bottom: 300px;

    &.reserve {
      padding-bottom: 280px;
    }
  }
}

.layout {
  padding: $padding_over_search 0 0;
  position: relative;
  z-index: 1;

  &-light {
    position: relative;
    z-index: 1;
    padding: $padding-layout-light 0 0;
  }
}

.scroll-fix {
  position : relative;
  margin : 0 auto;
}

.bg_white {
  background #fff
}

.clearfix {
  clearfix()

  &:before,
  &:after {
    content: '';
    display: block;
    clear: both;
  }
}

.light-theme {
  background-color: #bdbec3;
}

.lighten-theme {
  background-color: #E0E1E6;
}

.cursor-pointer {
  cursor: pointer;
}

.align-right {
  text-align: right;
}

.align-left {
  text-align: left;
}

.nowrap {
  white-space: nowrap;
}

.b-rub
  display inline-block
  padding-left 0.2em
  font-family 'Rouble'
  line-height normal
  font-weight normal
    line-height .8em

.pull-right
  float right

.pull-left
  float left

.main__center {
  margin 0 auto
  width $site-width
}

.b-display-table
  display: table;
  border-collapse: collapse;

.b-display-cell
  display: table-cell;
  vertical-align: top;

.b-display-inline {
  display: inline-block;
  vertical-align: top;
}

.b-display-block {
  display: block;
}

.color-white {
  color: #fff;
}

.color-black {
  color: #000;
}

.bg-white {
  background-color: #fff;
}

.bg-black {
  background-color: #000;
}

.like-link {
  cursor: pointer;
  color: #1e88c1;
}