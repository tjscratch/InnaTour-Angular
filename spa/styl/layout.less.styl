.banner-dots {
  bottom: 30px;
  line-height: 0;
  position: absolute;

  .dot {
    border-radius: 50%;
    box-shadow: 0, 0, 2px;
    border: 2px solid #fff;
    cursor: pointer;
    display: inline-block;
    height: 8px;
    margin-right: 12px;
    width: 8px;

    &.active {
      background: #fff;
      cursor: auto;
    }
  }
}

.breadcrumbs {
  color: #333;
  margin: 0 auto;
  width: $site-width;

  .crumb {
    display: inline-block;
    font-size: 12px;

    &:before {
      content: '/';
      color: inherit;
      margin: 0 4px 0 2px;
    }

    &:first-child:before {
      content: '';
      margin: 0;
    }

    a {
      color: inherit;
      text-decoration: none;

      &:hover {
        text-decoration: underline;
      }
    }
  }
}

