font-names = ('font-small' 'font-medium' 'font-large' 'font-big')
font-values = ($small $medium $large $big)

for name, key in font-names {
	.{name} {
		font-size: font-values[key];
	}
}

font-url(file) {
	return '/spa/fonts/' + file
}


@font-face {
	font-family: ProximaNova;
	font-weight: normal;
	font-style: normal;
	src: url(font-url('proximanova-reg-webfont.eot?')) format('eot'),
	url(font-url('proximanova-reg-webfont.woff')) format('woff'),
	url(font-url('proximanova-reg-webfont.ttf')) format('truetype'),
	url(font-url('proximanova-reg-webfont.svg#svgFontName')) format('svg');
}

