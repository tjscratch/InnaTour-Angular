.b-tooltip-price {
  display : inline-block;
  text-align : left !important;
}

.tooltip-price {
  color #4d4d4d
  font-size 14px
  text-align left
  padding: 7px 13px

  &.tooltip-price_big {
    width : 170px;
  }

  .list-price-item {
    position: relative;
    margin-bottom: 4px;
    font-weight: normal;

    &__right {
      text-align: right;
      font-weight : bold;
    }
  }

  .list-price {
    font-weight bold

    &.green {
      color #89c13a
    }
  }

  .list-price-total {
    border-top 1px solid #c0c0c2
    text-align right

    &:after {
      content: '';
      display: block;
      clear: both;
    }

    &__wrapper {
      float right
    }

    &__strike_through {
      transform rotate(-8deg) translate3d(0, -9px, 0)
      width 100%
      border-top 1px solid #4d4d4d
    }
  }

  &__title {

  }

  &__list_top {
    margin-top: 12px;
  }
}