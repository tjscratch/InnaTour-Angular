.flight-info
  margin 16px 0 16px

  .date
    color #4d4d4d
    display inline-block
    font-size 14px
    font-weight normal
    line-height 16px
    width 76px

  .date_w_120
    width 120px

  b
    color #000
    display block

  .arrow
    color #4d4d4d
    display inline-block
    font-size 12px
    position: relative
    line-height 18px
    margin 0 10% 0
    text-align center
    width 125px

    &:before
      background #4d4d4d
      content ''
      height 1px
      position absolute
      left 0
      top 50%
      width 100%

    &:after
      content ''
      border-style solid
      border-width 3px 0 4px 11px
      border-color transparent transparent transparent #4d4d4d
      height 0px
      position absolute
      margin-top -3px
      right 0
      top 50%
      width 0px

