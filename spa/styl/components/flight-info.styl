.wrap__flight-info
  height 100%
  display flex
  flex-direction column
  align-content space-around
.flight-info
  //margin 16px 0 16px
  display flex
  justify-content space-around
  align-items center
  flex 1 1

  .date
    color #778695
    display inline-block
    //font-size 14px
    font-size 12px
    font-weight normal
    line-height 14px
    //width 76px
    width 100px
    text-align center

    b {
      font-size 15px
    }

  .date_w_120
    //width 120px

  b
    color #313C48
    display block

  .arrow
    color #778695
    display inline-block
    font-size 12px
    position: relative
    line-height 18px
    //margin 0 2% 0
    text-align center
    width 125px

    .red_span {
        color #DB4437
    }

    &:before
      background #DDE3E9
      content ''
      height 1px
      position absolute
      left 0
      top 50%
      width 100%

