.b-result-content

  .warning
    color #dd3e14

  .icon-sprite-airplane, .icon-sprite-hanger
    position absolute
    top 7px
    right 5px


  .result-cell__airlines *
    vertical-align middle

  .corner-price, .price
    color #acafb1
    display inline-block
    font-family ProximaNova
    font-size 18px
    position relative

    &.cross:after
      background #acafb1
      display: block
      content ''
      height: 1px;
      position absolute
      top 50%
      transform:rotate(167deg);
      width: 100%;


  .corner-price
    margin 4px 0 0

  .result-hotel-gallery
    padding 0
    position relative
    width 200px


  .price-description
    //color #4d4d4d
    display block
    font-size 12px
    line-height 8px
    position absolute
    white-space nowrap

  .price
    position relative
    width 100%

  .result-buy, .result-choice
    //width 176px

  .result-buy
    .icon-crown
      position: absolute
      right 11px
      top 9px

    .share-button
      background transparent
      border 0
      border-radius(2px)
      cursor pointer
      height 30px
      position absolute
      margin 0
      right 3px
      top 2px
      width 32px

      &:before
        background url(../img/ticket/clip.png)
        content ''
        display block
        height 17px
        margin 2px 0 0 2px
        width: 17px

      &:hover
        background #e6e7e9

        &:before
          background-position 0 17px

      &.active
        background #89c13a

        &:before
          background-position 0 17px

    .tooltip-share-link
      position absolute
      padding 8px 29px 7px 6px
      right -4px
      top 30px

      .icon-cross
        cursor pointer
        position absolute
        right 9px
        top 13px


    .share-link-input
      border 0
      background #4d4d4d
      color #fff
      height 20px
      padding 0 5px
      width 200px

    .price
      color #000
      font-size 24px
      font-weight bold
      margin 40px 0 0

    .corner-price
      .price-description
        color #acafb1

    .price-description
      color #4d4d4d

  .button
    background #89c13a
    border-radius 2px
    color #fff
    font-family ProximaNova
    font-size 18px
    font-weight bold
		text-align center
    position: absolute
    bottom 10px
    left 5px
		right 10px

  .result-choice

    .price
      color #878787
      font-size 18px
      margin 20px 0 0


    .price-description
      font-size 12px

    .corner-price
      font-size 24px
      font-weight bold
      color #000



  .icon-price-info
    cursor pointer
    position: absolute
    right 0
    top 7px

	.bottom-actions
		bottom 10px
		font-size 14px
		left 10px
		line-height 26px
		position absolute
		right 10px

		&_right
			text-align: right

		a
			color : #1e88c1

			&.active
				color: #c0c0c2




.hotel-info
	margin 21px 0 35px

	&__wrapper
		position relative
		box-sizing border-box
		padding 0 0 10px 80px
		height 75px
		margin-bottom 10px

	&__tripadvisor {
		height 20px
	}

	img
		margin-right 10px
		position absolute
		left 0
		top 0


.hotel-info-content
	display inline-block
	vertical-align top

	.warning
		font-size 14px
		line-height 1.7em

	.star-container
		line-height 0
		margin 2px 0 4px

.hotel-info-name
	font-size 18px
	//margin 6px 0 0
	line-height 1em

.hotel-info-date
	color #575757
	font-size 14px
	line-height 16px

.hotel-info-place
	color #575757
	position relative
	text-decoration none
	font-size 14px
	padding-left 17px
	display inline-block
	padding-top : 2px

	&:hover
		text-decoration underline

	&:before
		content ''
		height 18px
		width 13px
		background url(/spa/img/hotel-pin-small.png)
		position absolute
		top 0px
		left 0px
