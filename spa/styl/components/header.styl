.header-padding-149
  padding-top 149px

.header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 300;

  &__container {
    clearfix()
    padding: 15px 0;
    color: #fff;

    a:hover {
      text-decoration underline
    }
  }

  &__nav-sec {
    float left
    font 14px Arial, sans-serif

    li {
      display inline-block
      margin 0 20px 0 0
    }

    a {
      color #c0c0c2
    }

    .current {
      color #89c13a
    }
  }

  &__price {
    float right
    font 14px Arial, sans-serif
    color #c0c0c2
    margin-top -2px

    .b-rub {
      color #fff
    }
  }

  &__sum {
    font bold 16px ProximaNova, Arial, sans-serif
    color #fff
    margin 0 5px
  }

  &__nav {
    float left
    font-size 17px

    li {
      display inline-block
      margin 0 18px 0 0
    }
  }

  &__user {
    float right
  }

  &__user-company {
    color #4d4d4d
    font 14px Arial, sans-serif
    text-align right
  }

  &__user-nav {
    padding 0 0 3px
    font-size 14px

    li {
      display: inline-block;
      padding: 2px 0 0 9px;
      margin: 0 0 0 7px;
      border-left: 1px solid #4d4d4d;

      &:first-child {
        border: 0;
      }
    }

    a {
      color: #878787;
    }

    &-name {
      color: #89c13a;
      padding-left: 23px;
      position: relative;
    }

    &-name:before,
    &-nav-reg:before {
      content ''
      display block
      position absolute
      left 0
      top 0
      width 15px
      height 14px
      background url('/spa/img/header-user.png') no-repeat
    }

    &-reg {
      padding-left 23px
      position relative
    }

    &-counter {
      color #fff
    }
  }

  &-info {
    background: linear-gradient(to bottom, #393939 0%, #202020 100%);
    background-color: #2c2c2c;
    border-bottom: 1px solid #363636;
    padding: 4px 0;

    &-item {
      display: inline-block;
      vertical-align: middle;
    }

    &-logo {
      display: inline-block;
      font-family: ProximaNovaLight;
      font-size: 24px;

      &:hover {
        text-decoration: none;
      }

      .name {
        color: #89c13a;
        position: relative;
        margin-left: 15px;
        top: -11px;
      }
    }

    &-container {
      line-height: 0; // хак
      color: #989898;
      font-family: ProximaNova;
      margin: auto;
      position: relative;
      width: $site-width;

      &-right {
        text-align: right;
      }

      a {
        color: inherit;
      }
    }

    &-menu {
      display: inline-block;
      margin: 0 0 0 0;
      position: relative;
      top: 10px;

      &-item {
        border-left: 1px solid #434343;
        display: inline-block;
        font-size: 14px;
        line-height: 19px;
        padding: 0 14px;

        &:first-child {
          border: 0;
        }

        &:last-child {
          padding-right: 0;
        }
      }
    }
  }

  &-text {
    display: inline-block;
    font-size: 12px;
    margin-left: 17px;
    position: absolute;
    top: 19px;
  }

  &-login {
    display: inline-block;
    font-size: 14px;
    position: relative;
    color: #989898;
    float: right;
    margin-top: 14px;

    .icon-user {
      margin-right: 7px;
    }

    .header-login-link {
      color: #989898;
    }

    .header-logout-link {
      color: #989898;
      margin-left: 6px;
      padding-left: 8px;
      border-left: 1px solid #434343;
    }

    &-user-link {
      position: relative;

      .user-pic {
        position: relative;
        top: 4px;
        right: 2px;
      }
    }
  }

  &-phone {
    font-size: 16px;

    .icon-phone {
      margin-right: 8px;
    }
  }

  &-menu {
    background: linear-gradient(to bottom, #2d2d2d 0%, #1c1c1c 100%);
    background-color: #2c2c2c;
    box-shadow: 0 5px 10px rgba(0, 0, 0, .4);
    font-size: 17px;

    &-container-items {
      font-family: Arial, sans-serif;
      height: 50px;
      margin: auto;


      &:before {
        content: '';
        display: inline-block;
        height: 100%;
        vertical-align: middle;
      }
    }

    &-item {
      display: inline;
      margin-left: 14px;

      &:first-child {
        margin: 0;
      }
    }

    a {
      color: #fff;
      text-decoration: none;

      &.active {
        color: #89c13a;
      }
    }
  }

  &-login-form-popup {
    background: #fff;
    box-shadow: 0, 5px, 10px, 0, rgba(0, 0, 0, 0.25);
    padding: 1px 14px 14px;
    position: absolute;
    left: -65px;
    top: 35px;
    z-index: 1;

    &:before {
      content: '';
      display: block;
      position: absolute;
      border-color: transparent transparent #fff transparent;
      border-style: solid;
      border-width: 0 9.5px 10px 9.5px;
      height: 0;
      left: 50%;
      margin-left: -5px;
      top: -10px;
      width: 0;
    }

    .field {
      font-size: 15px;
      height: 30px;
      padding: 0 10px;

      width: 161px - 2 * 10;
    }

    .button {
      font-size: 15px;
      height: 30px;
      padding: 0 17px;
      margin-top: 10px;
    }
  }
}