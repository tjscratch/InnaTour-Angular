.ui-datepicker {
  box-shadow: 0, 5px, 10px, rgba(50, 50, 50, .25);
  background: #fff;

  color: #292929;
  font-family: ProximaNova, Arial, sans-serif;
  font-weight: normal;

  padding: 10px;
  width: 268px;
  z-index: 2 !important;

  .calendar-head {
    text-align: right;
    border-bottom: 1px solid #c0c0c2;
    margin: 0 -10px;
    padding: 1px 20px 8px 0px;

    .check-container {
      width: 110px;
      display: inline-block;
    }

    .caption {
      position: absolute;
      left: 20px;
      font-size: 14px;
      font-family: ProximaNova, Arial, sans-serif;
      font-weight: bold;
    }
  }

  .ui-datepicker-header {
    margin-top: 8px;
  }

  .ui-datepicker &-prev, .ui-datepicker &-prev-hover {
    left: 2px;
    top: 0;
  }

  .ui-datepicker &-next, .ui-datepicker &-next-hover {
    right: 15px;
    top: 0;
  }

  &-title {
    font-size: 20px;
    margin: 0 0 6px;
  }

  &-calendar {
    th {
      color: #878787;
      font-size: 10px;
      text-transform: uppercase;

      &.ui-datepicker-week-end {
        color: #dd3e14;
      }
    }

    td {
      font-size: 20px;
    }
  }

  table {
    margin: 0;
  }

  td {
    padding: 0;

    a, span {
      border: 1px solid transparent;
      height: 38px;
      line-height: 38px;
      display: block;
      width: 40px;
    }

    &.ui-datepicker-week-end {
      span {
        color: #dd3e14;
      }

      a {
        color: #dd3e14;
      }
    }

    &.ui-datepicker-today {
      a, span {
        border-color: #89c13a;
      }
    }

    a {
      color: #000;
      padding: 0;
      text-align: center;

      &.ui-state-active,
      &.ui-state-hover {
        background: #89c13a;
        color: #fff;
      }

    }

    span {
      padding: 0;
      text-align: center;
    }
  }

  &-unselectable {
    color: #acacac;
  }
}
