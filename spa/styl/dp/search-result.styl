
.icon-expand, .icon-collapse
  display inline-block
  width 10px
  height 14px
  background url(../img/expand-collapse.png)

.icon-collapse
  background-position 0 -14px




.results-list_960
  width 960px

.recommend-bundle-container
  position fixed
  top 149px
  width 100%
  z-index 5

	&.recommend-bundle-container_short
		top 50px

.recommend-bundle
  background #000
  overflow hidden
  position relative
  width 100%



.recommend-bundle-title {
	color: #fff;
	font-size: 18px;
	font-weight: normal;
	margin-bottom: 10px;
	margin-top: -18px;

	.icon-crown {
		position: relative;
		top: 1px;
	}
}

.recommend-bundle-background
  background-repeat no-repeat
  background-size cover
  height: 100%
  position: absolute
  width 100%
  z-index: 1

.recommend-bundle-wrap
  width 960px
  margin 0 auto
  padding 30px 0 24px
  position: relative;
  z-index: 2

  .expand-collapse-link
    font-size 14px
    color #fff
    position: absolute
    right 0
    top 12px

.recommend-bundle-wrap_small
  padding 11px 0

  .expand-collapse-link
    top 40px

.results-container
  padding 435px 0 0

  &.results-container__short
    padding-top 164px

  .result
    width 720px