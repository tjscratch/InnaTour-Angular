.recommend-bundle-container {
  position fixed
  top $padding_over_search
  width 100%

  z-index 5

  &.recommend-bundle-container_short {
    top $padding_over_head
  }

  &__small {
    .result-small__cell {
      padding-top 10px !important

      &:first-child {
        padding-top 6px !important
      }
    }
  }
}

.recommend-bundle {
  background #000
  position relative
  width 100%
}

.recommend-bundle-title {
  color: #fff;
  font-size: 18px;
  font-weight: normal;
  margin-bottom: 10px;
  margin-top: -18px;

  .icon-crown {
    position: relative;
    top: 1px;
    left: 10px;
  }
}

.recommend-bundle-background {
  background: url(/spa/img/dp-background.jpg) no-repeat 0 0;
  background-size cover
  height: 100%
  position: absolute
  width 100%
  z-index: 1

  &:after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
  }
}

.recommend-bundle-wrap {
  padding 30px 0 24px;
  position: relative;
  z-index: 2;

  /*.recommend-bundle-container__toggle {
    text-align : right;
    padding-top : 12px;
  }*/

  .expand-collapse-link {
    font-size 14px
    color #fff
    position: absolute
    right 0
    top 12px
  }
}

.recommend-bundle-wrap_small {
  padding 10px 0

  .expand-collapse-link {
    top 45px
    z-index 10
  }
}

.results-container {
  // наследуем windth margin
  @extend .main__center;

  padding $full_padding 0 0
  font-family $ProximaNova
  position relative
  color #333
  clearfix()


  &.results-container_top {
    padding 10px 0 0
  }

  &.results-container__short {
    padding-top $short_padding
  }

}

