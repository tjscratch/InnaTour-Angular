
.icon-expand, .icon-collapse {
  display inline-block
  width 10px
  height 14px
  background url(/spa/img/expand-collapse.png)
}

.icon-collapse {
  background-position 0 -14px
}




.results-list_960 {
  width 960px
}


.recommend-bundle-container {
  position fixed
  top $padding_over_search
  width 100%

  z-index 5

  &.recommend-bundle-container_short {
    top $padding_over_head
  }

  &__small {
    .result-small__cell {
      padding-top 10px !important

      &:first-child {
        padding-top 6px !important
      }
    }
  }
}


.recommend-bundle {
  background #000
  position relative
  width 100%
}



.recommend-bundle-title {
	color: #fff;
	font-size: 18px;
	font-weight: normal;
	margin-bottom: 10px;
	margin-top: -18px;

	.icon-crown {
		position: relative;
		top: 1px;
		left: 10px;
	}
}

.recommend-bundle-background {
  background-repeat no-repeat
  background-size cover
  background-size 120%
  background-position 0 100%
  height: 100%
  position: absolute
  width 100%
  z-index: 1
}

.recommend-bundle-wrap {
  width 960px
  margin 0 auto
  padding 30px 0 24px
  position: relative;
  z-index: 2

  /*.recommend-bundle-container__toggle {
    text-align : right;
    padding-top : 12px;
  }*/

  .expand-collapse-link {
    font-size 14px
    color #fff
    position: absolute
    right 0
    top 12px
  }
}

.recommend-bundle-wrap_small {
  padding 10px 0

  .expand-collapse-link {
    top 45px
    z-index 10
  }
}
.results-container {
  padding $full_padding 0 0

  &.results-container__short {
    padding-top $short_padding
  }

}

