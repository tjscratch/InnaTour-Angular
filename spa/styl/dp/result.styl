.result
  border-radius(4px)
  box-shadow 0 3px 3px rgba(0,0,0,.6)
  display inline-block
  line-height 0
  margin-top 10px
  overflow hidden
  position: relative


  .warning
    color #dd3e14

  .tooltip-price
    color #4d4d4d
    font-size 14px
    width 140px

    .list-price-item
      &:before
        content 'â€¢'
        color #4d4d4d

    .list-price
      font-weight bold

      &.green
        color #89c13a

    .list-price-total
      border-top 1px solid #c0c0c2
      text-align right

  .result-cell
    background #fff
    box-sizing border-box
    display table-cell
    line-height normal
    margin-left 10px
    padding 10px
    position relative
    vertical-align top

    &:first-child
      margin-left 0

  .result-cell-gap
    display table-cell
    position: relative
    width 10px

    &:before, &:after
      content ''
      background url(../img/ticket-gaps.png) no-repeat
      display block
      position: absolute
      width 10px
      height 6px
      overflow hidden

    &:before
      top 0

    &:after
      background-position 0 -6px
      bottom 0

  .result-cell-gap-wrap
    background #000
    border 1px solid #fff
    border-width 0 5px 0 4px
    bottom 6px
    position: absolute
    top 6px
    width 1px

  .corner-price, .price
    color #acafb1
    display inline-block
    font-family ProximaNova
    font-size 18px
    position relative

    &.cross:after
      background #acafb1
      display: block
      content ''
      height: 1px;
      position absolute
      top 50%
      transform:rotate(167deg);
      width: 100%;

  .corner-price
    float right
    margin-right 10px

  .price-description
    color #acafb1
    display block
    font-size 12px
    position absolute
    white-space nowrap


  .result-hotel-gallery
    overflow hidden
    padding 0
    position relative
    width 200px

  .result-buy
    width 180px

    .corner-price
      float none
      margin-right 0

    .icon-clip, .icon-crown
      position: absolute
      right 11px
      top 9px

    .price
      color #000
      font-size 30px
      font-weight bold
      margin 38px 0 0
      position relative
      width 100%

      .icon-price-info
        cursor pointer
        position: absolute
        right 0
        top 7px
        

      .price-description
        font-weight normal

    .button
      background #89c13a
      border-radius(2px)
      color #fff
      font-family ProximaNova
      font-size 18px
      font-weight bold
      height 30px
      position: absolute;
      bottom 10px
      width 164px
      left 5px
      
      
  .bottom-actions
    bottom 10px
    left 10px
    line-height 26px
    position: absolute
    right 10px

    a
      color #1e88c1
      font-size 14px

      &.active
        color #c0c0c2

  .flight-info
    margin 20px 0 22px

    .date
      color #4d4d4d
      display inline-block
      font-size 12px
      font-weight normal

    b
      color #000
      display block
      font-size 14px


    .arrow
      color #4d4d4d
      display inline-block
      font-size 12px
      position: relative
      line-height 18px
      margin 0 35px 0 40px
      text-align center
      width 125px

      &:before
        background #4d4d4d
        content ''
        height 1px
        position absolute
        left 0
        top 50%
        width 100%

      &:after
        content ''
        border-style solid
        border-width 3px 0 4px 11px
        border-color transparent transparent transparent #4d4d4d
        height 0px
        position absolute
        margin-top -3px
        right 0
        top 50%
        width 0px


  .hotel-info
    margin 24px 0 35px

    img
      margin-right 10px


  .hotel-info-content
    display inline-block
    vertical-align top
    /*width 75%*/

  .hotel-info-name
    font-size 18px
    font-weight normal

  .hotel-info-date
    color #575757
    font-size 14px

  .hotel-info-place
    color #575757
    text-decoration none

    &:hover
      text-decoration underline

    &:before
      content ''
      display inline-block
      background url(../img/hotel-pin-small.png)
      height 18px
      margin-right 2px
      position relative
      top 4px
      width 13px


.hotel-info-tripadvisor
  color #878787
  line-height 15px
  margin-top: 6px
  vertical-align top


.result-cell-390
  width 390px

  .hotel-info-content
    width 75%

.result-cell-530
  width 530px

.result-cell-330
  width 330px

.result-small
  .result-cell
    display table-cell
    font-size 14px
    vertical-align top

  .result-cell-390, .result-cell-330
    border-right 1px solid #4d4d4d
    vertical-align middle

  .flight, .hotel-info-date
    color #c0c0c2
    line-height 16px



  .flight
    .white
      color #fff
      margin-left 8px

  .result-cell-330
    padding 0 15px

  .hotel-info-name
    color #fff
    font-weight normal

  .corner-price
    color #fff
    font-family ProximaNova
    font-size 24px
    font-weight bold

    position: absolute;
    right 0
    top 6px