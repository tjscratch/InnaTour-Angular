// Pag
.pag
    clearfix()
    text-align center
    padding 14px 0 0
    color #4d4d4d
    fz16
    li
        display inline-block
        margin 0 3px

    a
        color #4d4d4d
        display block
        padding 4px 10px 2px
        border-radius 3px
        border 1px solid transparent

        &:hover
            border-color #89c13a
            text-decoration none

    .current
        background #89c13a
        border-color #89c13a
        color #fff

    .pag-prev
        float left
        margin 2px 0 0 20px
        font-size 14px

        a
            padding-left 24px
            background url('/spa/img/prev.png') no-repeat 0 center

            &:hover
                border-color transparent

    .pag-next
        float right
        margin 2px 20px 0 0
        font-size 14px

        a
            padding-right 24px
            background url('/spa/img/next.png') no-repeat right center

            &:hover
                border-color transparent
