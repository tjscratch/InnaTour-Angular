	t = (color1 - 6%);
	b = (color2 - 20%);

	&-{name} {

		color: $white;
		//text-shadow: 0 -1px 1px rgba($black, .40);

		background: bg;
		background: rgba(bg, .9);
		//border-color: t (t/2 + b/2) b;
		gradient(top, rgba(color1, .9), rgba(color2, .9));

		&:hover {
			/*background-color: color1 + 10%;
			border-color: t (t/2 + b/2) b;
			gradient(top, (color1 + 10%), (color2 + 10%));*/
