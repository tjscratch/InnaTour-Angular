/* ----------- now ---------- */


.button {
  transition : background-color  .3s ease;
  border-radius 3px
  background: #89c13a;
  text-shadow 0 0 transparent
  color: #fff;
  cursor: pointer;
  font-family : ProximaNova, Arial, sans-serif;
  font-weight : normal;
  padding 6px 16px
  display inline-block
  margin: 0;
  outline: none;
  position relative;
  overflow hidden;


  // TODO : defrecated
  input {
    position absolute
    display block
    left 0
    top 0
    width 300px
    height 300px
    cursor pointer
    border 0
    opacity 0
  }



  &:hover {
    text-decoration none
    background: #95cd47;
  }

  &.disabled {
    background: #e4e4e4;
    cursor: auto;
  }


  &_inline {
    display inline-block
    padding 8px 38px
    line-height 1
    font-size 18px
    font-weight bold
  }

  &_small {
    padding 7px 30px
    font-size 14px
    font-weight bold
    border-top 1px solid #bddd90
    display inline-block
    margin 0 2px 0 0
    line-height 1
  }


  &__red {
    background #a82e00

    &:hover {
      background #c33500
    }
  }


  &_size_l {
    font-size 18px
    font-weight normal
    height 30px
    width 170px
  }
  &_size_xl {
    font-size 18px
    font-weight normal
    height 40px
    width 170px
  }

}





