@media (max-width 980px)

    .form-control {
        height 25px
        line-height 15px

        &::-webkit-input-placeholder {
            font-size 12px
        }
        &:-moz-placeholder {
            font-size 12px
        }
        &::-moz-placeholder {
            font-size 12px
        }
        &:-ms-input-placeholder {
            font-size 12px
        }
    }
    .FieldError {
        position relative
        font-size 11px
    }
    #messageFormCvc {
        padding 0
    }
    #messageFormYear {
        left auto
    }
    .pay-form {
        max-width 300px

        .pay-form__info {
            .pay-form__info-dead-line {

                .dead-line__label {
                    font-size 15px
                }

                .dead-line__value {
                    font-size 25px
                }
            }
        }

        .pay-form-fields {

            .load {
                padding 80px 0
            }

            &__cart-data,
            &__cart-cvs {
                width 300px
                height auto
                float none
                border-radius 10px
                box-sizing border-box
            }

            &__cart-data-icons {
                margin 5px 0 10px
            }

            &__cart-data-field {

                margin 0 0 15px

                .form-control {
                    width 265px
                    font-size 12px
                }

                &.date {
                    margin 0 0 10px

                    .form-label {
                        //width 110px
                        padding 7px 0 0 0
                    }

                    .form-control {
                        width 100%
                        height 25px
                        font-size 12px
                        text-align center
                    }

                    span {
                        padding 22px 5px 0
                    }
                }

                &.fio {
                    .form-control {
                        height 15px
                        font-size 12px
                    }
                }
            }

            &__cart-cvs {
                margin-top -80px
                margin-left 0px
            }
            &__cart-cvs-container {
                padding 45px 0 0 0
            }
            &__cart-cvs-field_line {
                height 50px
            }
            &__cart-cvs-field {
                height auto

                .wrap-cvc {
                    float none
                    padding 4px 4px 4px 160px

                    .form-control {
                        font-size 12px
                        width 55px
                        border-radius 3px
                        text-align center
                        margin 0 0 3px 0
                        border 1px solid rgb(216, 216, 216)
                    }
                }
            }
        }
        .pay-form-actions {
            &__btn,
            &__checkbox {
                float none
                width 100%
                padding 0
            }
            &__checkbox {
                margin-bottom 25px
            }
            .form-btn {
                width 100%
            }
        }
    }
    
