.filter{
  margin 10px 0

  .form-active{
    padding-top 17px
  }
}
.form-label{
  display block
  height 17px
  line-height 17px
  padding-left 10px
  font-size 12px
  color $color-gray
}
.form-input{
  width 100%
  height $form-item-height
  border 1px solid $color-gray-light
  border-radius $border-radius
  color $color-black
  font-size 15px
  outline none !important
  font-family: ProximaNovaRegular, Arial, sans-serif;
}
select{
  @extend .form-input;
  padding 0 5px
  text-indent 0.01px
  text-overflow ''
  appearance none
}
.btn{
  height $form-item-height
  padding 0 40px
  background-color $color-green
  border none
  border-bottom 2px solid #356e1a
  border-radius $border-radius
  font-size 18px
  font-weight bold
  color #fff
  font-family: ProximaNovaRegular, Arial, sans-serif
  box-shadow 0 2px 2px rgba(0, 0, 0, .5)
  text-decoration none !important
  cursor pointer

  &:hover,
  &:focus{
    background-color $color-green-hover
  }
  &:active{
    background-color $color-green-active
  }

}